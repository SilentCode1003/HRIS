      function adjustSearchTerm(searchTerm) {
        const names = searchTerm.split(" ");
        if (names.length > 1) {
          return `${names[names.length - 1]} ${names.slice(0, -1).join(" ")}`;
        }
        return searchTerm;
      }
  
