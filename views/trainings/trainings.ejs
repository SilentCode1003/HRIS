            <!-- Employee Name Select -->
            <div class="col">
              <div class="form-floating">
                <select class="form-select" id="edittrainingemployeename" name="edittrainingemployeename" aria-label="Floating label select example">
                  <option selected>Choose....</option>
                  <!-- Employee name options should be dynamically loaded here -->
                </select>
                <label for="edittrainingemployeename">Employee name</label>
              </div>
            </div>
            <br>
            
            <!-- Date Started Input -->
            <div class="col">
              <div class="form-floating">
                <input type="date" class="form-control" id="edittrainingdatestarted" name="edittrainingdatestarted">
