        </div>
        
        <!-- Modal Body -->
        <div class="modal-body">
          <form>
            <!-- Training Name Select -->
            <div class="col">
              <div class="form-floating">
                <select class="form-select" id="edittrainingname" name="edittrainingname" aria-label="Floating label select example">
