<body>

    <div class="container mt-5">
        <h1 class="font-weight-bold text-danger" id="head-title">Attendance</h1>
        <br>
        <br>
        <!-- Table -->
        <div class="card shadow mb-4" id="tablecard">
            <div class="card-header py-3">
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#geoFenceModal">
                    Set Geo-fence
                </button>
                <input id='myInput' onkeyup='searchTable()' type='text' placeholder="  Search....">
            </div>
            <div class="card-body">
                <div class="table-responsive" id="table-responsive-id">
                    <table class="table table-striped" id="dataTableattendance">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Employee ID</th>
                                <th>Date</th>
                                <th>Clock In</th>
                                <th>Device In</th>
                                <th>Clock Out</th>
                                <th>Device Out</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Populate table rows dynamically using JavaScript -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Geo-fence Modal -->
    <div class="modal fade" id="geoFenceModal" tabindex="-1" role="dialog" aria-labelledby="geoFenceModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="geoFenceModalLabel">Geo-fence Settings</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <label for="latitude">Latitude:</label>
                    <input type="text" id="latitude" class="form-control" placeholder="Enter latitude">

                    <label for="longitude">Longitude:</label>
                    <input type="text" id="longitude" class="form-control" placeholder="Enter longitude">

                    <label for="radius">Radius:</label>
                    <input type="text" id="radius" class="form-control" placeholder="Enter radius">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="setGeoFence()">Set Geo-fence</button>
                </div>
            </div>
        </div>
    </div>
</body>