<h1 class="font-weight-bold" id="h-title">Geo-fence Settings</h1>

<!-- Table -->
<div class="card" id="tablecard">
    <div class="card-header">
        <button type="button" class="btn btn-add-color" data-bs-toggle="modal" data-bs-target="#geoFenceModal">
           <b>Add Geo-fence</b> 
        </button>
        <input id='myInput' type='text' placeholder="  Search....">
    </div>
    <div class="card-body">
        <div class="table-responsive" id="table-responsive-id">
            <table class="table table-striped" id="dataTablegeofence">
                <thead>
                    <tr>
                        <th class="col-sm-1">ID</th>
                        <th>Name </th>
                        <th>Department</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Radius</th>
                        <th class="col-25">Location</th>
                        <th>Status</th>
                        <th class="col-sm-1">Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
</div>

<!-- Geo-fence Modal -->
<div class="modal fade" id="geoFenceModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg"> 
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Geo-Fence</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <form>
                            <div class="col">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="geofencename" name="geofencename"
                                        placeholder="Geo-Fence Name">
                                    <label for="floatingInput">Geo-Fence Name</label>
                                </div>
                            </div>
                            <br>
                            <div class="col">
                                <div class="form-floating">
                                    <select class="form-select" id="geofencedepartment" name="geofencedepartment"
                                        aria-label="Floating label select example">
                                    </select>
                                    <label for="geofencedepartment">Department</label>
                                </div>
                            </div>
                            <br>
                            <div class="col">
                                <div class="form-floating">
                                    <input type="number" class="form-control" id="radius" name="radius" placeholder="Radius">
                                    <label for="floatingInput">Radius</label>
                                </div>
                            </div>
                            <br>
                            <div class="col">
                                <div class="form-floating">
                                    <input type="number" class="form-control" id="longitude" name="longitude"
                                        placeholder="Longitude">
                                    <label for="floatingInput">Longitude</label>
                                </div>
                            </div>
                            <br>
                            <div class="col">
                                <div class="form-floating">
                                    <input type="number" class="form-control" id="latitude" name="latitude"
                                        placeholder="Latitude">
                                    <label for="floatingInput">Latitude</label>
                                </div>
                            </div>
                            <br>
                            <div class="col">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="location" name="location"
                                        placeholder="Location">
                                    <label for="floatingInput">Location</label>
                                </div>
                            </div>
                            <br>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <label for="floatingInput">Preview</label>
                        <div id="map" style="height: 300px;"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="geofencesavebutton" name="geofencesavebutton">Save</button>
            </div>
        </div>
    </div>
</div>

<!--Edit Geo-fence Modal -->
<div class="modal fade" id="editGeoFenceModal" data-bs-backdrop="static" tabindex="-1"
    aria-labelledby="editGeoFenceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editGeoFenceModalLabel">Edit Geo-Fence</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <form>
                            <div class="col">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="editGeofenceName"
                                        name="editGeofenceName" placeholder="Geo-Fence Name">
                                    <label for="editGeofenceName">Geo-Fence Name</label>
                                </div>
                            </div>
                            <br>
                            <div class="col">
                                <div class="form-floating">
                                    <select class="form-select" id="editGeofenceDepartment"
                                        name="editGeofenceDepartment" aria-label="Floating label select example">
                                        <!-- Populate this dropdown with department options -->
                                    </select>
                                    <label for="editGeofenceDepartment">Department</label>
                                </div>
                            </div>
                            <br>
                            <div class="col">
                                <div class="form-floating">
                                    <input type="number" class="form-control" id="editRadius" name="editRadius"
                                        placeholder="Radius">
                                    <label for="editRadius">Radius</label>
                                </div>
                            </div>
                            <br>
                            <div class="col">
                                <div class="form-floating">
                                    <input type="number" class="form-control" id="editLongitude"
                                        name="editLongitude" placeholder="Longitude">
                                    <label for="editLongitude">Longitude</label>
                                </div>
                            </div>
                            <br>
                            <div class="col">
                                <div class="form-floating">
                                    <input type="number" class="form-control" id="editLatitude"
                                        name="editLatitude" placeholder="Latitude">
                                    <label for="editLatitude">Latitude</label>
                                </div>
                            </div>
                            <br>
                            <div class="col">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="editLocation"
                                        name="editLocation" placeholder="Location">
                                    <label for="editLocation">Location</label>
                                </div>
                            </div>
                            <br>
                            <div class="col">
                                <div class="form-floating">
                                    <select class="form-select" id="editstatus" name="editstatus">
                                        <option value="Active">Active</option>
                                        <option value="Inactive">Inactive</option>
                                    </select>
                                    <label for="editstatus">Status</label>
                                </div>
                            </div>                            
                            <br>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <label for="editMap">Preview</label>
                        <div id="editMap" style="height: 300px;"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="editGeoFenceSaveButton"
                    name="editGeoFenceSaveButton">Save Changes</button>
            </div>
        </div>
    </div>
</div>





