<!-- Table -->
<div class="card" id="tablecard">
    <div class="card-header ch-coop">
        <h3 class="title-card-table">Apps</h3>
        <button class="btn btn-add-color" data-bs-toggle="modal" data-bs-target="#addmodal">
            <b>+ Add</b>
        </button>
        <input id='myInput' type='text' placeholder="  Search....">
    </div>
    <div class="card-body">
        <div class="table-responsive" id="table-responsive-id">
            <table class="table table-striped" id="dataTableappdetails">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>ID</th>
                        <th>App Name</th>
                        <th>App Details</th>
                        <th class="col-25">Version</th>
                        <th>Date</th>
                        <th>Create By</th>
                        <th class="col-sm-1">Action</th>
