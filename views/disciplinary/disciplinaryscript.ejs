    $("#dataTableshift tbody").on("click", "tr", function () {
      var dataRow = [];
      $(this)
        .closest("tr")
        .find("td")
        .each(function () {
          dataRow.push($(this).text());
        });
      console.log(dataRow);
      shiftid = dataRow[0];
    });

    $(document).on("click", "#editBtn", function () {
      $.ajax({
        type: "POST",
        url: "/shift/getshift",
        data: {
          shiftid: shiftid,
        },
        success: function (result) {
          if (result.msg === "success") {
            const existingData = result.data;

            $.each(existingData, (key, item) => {
              $("#editshiftid").val(item.shiftid);
              $("#editshift").val(item.shiftname);
              $("#editshiftdepartment").val(item.department);
              $("#editshiftstatus").val(item.status);
              //$('#editshiftdepartment').val(`${item.department}`);
              $("#editshiftcreateby").val(item.createby);
            });
          } else {
            swal("Error fetching employee data", "success");
          }
        },
        error: function (err) {
          swal("An error occurred while fetching employee data", err, "error");
        },
      });
    });
    $(document).on("click", "#editshiftsavebtn", function () {
      console.log("Save button clicked");
      let id = shiftid;
      let shiftname = $("#editshift").val();
      let status = $("#editshiftstatus").val();
      let department = $("#editshiftdepartment").val();
      let createby = $("#editshiftcreateby").val();

      console.log(`${id},
  ${shiftname},
  ${status},
  ${department},
  ${createby}`);

      var message = "";

      if (shiftname === "") {
        message += "departmentname is required. ";
      }

      if (status === "") {
        message += "status is required. ";
      }

      if (department === "") {
        message += "departmenthead is required. ";
      }

      if (createby === "") {
        message += "status is required. ";
      }

      if (message !== "") {
        swal("Validation Error", message, "error");
      } else {
        $.ajax({
          type: "POST",
          url: "shift/update",
          data: {
            shiftid: id,
            shiftname: shiftname,
            status: status,
            department: department,
            createby: createby,
          },
          success: function (result) {
            if (result.msg == "success") {
              swal({
                title: "Update Successfully",
                text: "You clicked the button!",
                icon: "success",
                button: "OK!",
              }).then((results) => {
                window.location.reload();
              });
              LoadTable();
            } else if (result.msg == "exist") {
              swal({
                title: "Exist",
                text: "Data already exists!",
                icon: "warning",
                button: "OK!",
              });
            } else {
              swal(
                "Data already exists!",
                "You clicked the button!",
                "warning"
              );
            }
          },
          error: function (err) {
            swal("Error", "An error occurred while saving data.", "error");
          },
        });
      }
    });

    function searchTable() {
      var input, filter, found, table, tr, td, i, j;
      input = document.getElementById("myInput");
      filter = input.value.toUpperCase();
      table = document.getElementById("dataTableposition");
      tr = table.getElementsByTagName("tr");
      for (i = 0; i < tr.length; i++) {
        td = tr[i].getElementsByTagName("td");
        for (j = 0; j < td.length; j++) {
          if (td[j].innerHTML.toUpperCase().indexOf(filter) > -1) {
            found = true;
          }
        }
        if (found) {
          tr[i].style.display = "";
          found = false;
        } else {
          tr[i].style.display = "none";
        }
      }
    }
  });
</script>
