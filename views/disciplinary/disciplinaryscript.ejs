<script>
  let shiftid = "";
  let index = "";

  $(document).ready(function () {
    console.log("Initialize");
    LoadTable();
    LoadListEmp();
    LoadListviolation();
    // LoadListOffensename();

    function LoadTable() {
      $("#dataTabledisciplianary").DataTable({
        destroy: true,
        processing: true,
        serverSide: true,
        paging: false,
        searching: false,
        info: false,
        scrollY: 400,
        scrollCollapse: true,
        serverMethod: "GET",
        ajax: {
          url: "/disciplinary/load",
          dataSrc: (json) => {
            var finalData = [];
            var data = json.data;

            console.log(data);
            $.each(data, (key, item) => {
              var action = "";
              var status = item.status;

              action = `
                    <button id="editBtn" class="btn text-primary" name="editBtn" data-bs-toggle="modal" data-bs-target="#editshiftmodal"><i class="fas fa-fw fa-pen"></i></button>
                   `;

              finalData.push({
                disciplinaryid: item.disciplinaryid,
                employeeid: item.employeeid,
                offenseid: item.offenseid,
                actionid: item.actionid,
                violation: item.violation,
                date: item.date,
                createby: item.createby,
                createdate: item.createdate,
                status: item.status,
                action: action,
              });
            });

            return finalData;
          },
        },
        columnDefs: [
          {
            targets: 1,
            className: "td-indent",
          },
        ],
        columns: [
          { data: "disciplinaryid" },
          { data: "employeeid" },
          { data: "offenseid" },
          { data: "actionid" },
          { data: "violation" },
          { data: "date" },
          { data: "createby" },
          { data: "createdate" },
          { data: "status" },
          { data: "action" },
        ],
        initComplete: function () {
          console.log("Done");
        },
      });
    }

    $(document).on("click", "#shiftsavebtn", function () {
      let shiftname = $("#shifthours").val();
      let status = $("#shiftstatus").val();
      let department = $("#shiftdepartment").val();
      let createby = $("#shiftcreatedby").val();

      console.log(`
  ${shiftname}
  ${status}
  ${department}
  ${createby}
  `);

      var message = "";

      if (shiftname == "") {
        message += "shiftname is required ";
      }

      if (status == "") {
        message += "status is required ";
      }

      if (department == "") {
        message += "department is required ";
      }

      if (createby == "") {
        message += "createby is required ";
      }

      if (message !== "") {
        swal("Validation Error", message, "error");
      } else {
        $.ajax({
          type: "POST",
          url: "/shift/save",
          data: {
            shiftname: shiftname,
            status: status,
            department: department,
            createby: createby,
          },
          success: function (result) {
            if (result.msg == "success") {
              swal({
                title: "Saved Successfully",
                text: "You clicked the button!",
                icon: "success",
                button: "OK!",
              }).then((results) => {
                window.location.reload();
              });
              LoadTable();
            } else {
              swal({
                title: "Exist",
                text: "Data already exists!",
                icon: "warning",
                button: "OK!",
              });
            }
          },
          error: function (err) {
            swal("Data already exist!", "You clicked the button!", "warning");
          },
        });
      }
    });

    function LoadListEmp() {
      $.ajax({
        type: "GET",
        url: "/employee/load",
        success: function (result) {
          console.log(result.data);
          var data = result.data;

          $.each(data, function (key, item) {
            var options = new Option(item.newEmployeeId, item.newEmployeeId);
            $(options).html(item.newEmployeeId);
            $("#disciplinaryemployeeid").append(options);
            console.log(item.newEmployeeId);
          });
        },
        error: function (result) {
          alert("error: " + result.data);
        },
      });
    }

    function LoadDesciplinary() {
      $.ajax({
        type: "GET",
        url: "/disciplinaryaction/load",
        success: function (result) {
          console.log(result.data);
          var data = result.data;

          $.each(data, function (key, item) {
            var options = new Option(item.description, item.description);
            $(options).html(item.description);
            $("#disciplinaryactionid").append(options);
            console.log(item.description);
          });
        },
        error: function (result) {
          alert("error: " + result.data);
        },
      });
    }

    $("#disciplinaryviolationid").on("change", function () {
      var description = $(this).val();
      console.log(index);
      $.ajax({
        type: "POST",
        url: "/disciplinary/getactionoffense",
        data: {
          description: description,
        },
        success: function (result) {
          try {
            console.log(result.data);
            var data = result.data;
            let actioncode = data[0].actioncode;

            $("#disciplinaryactionid").empty();
            $("#disciplinaryoffenseid").empty();

            $.ajax({
              type: "POST",
              url: "/disciplinary/getactioncode",
              data: {
                actioncode: actioncode,
              },
              success: function (result) {
                var data = result.data;

                $.each(data, function (index, value) {
                  var actionoptions = new Option(
                    value.actioncode,
                    value.actioncode
                  );
                  $(actionoptions).html(
                    `${value.actioncode} - ${value.description}`
                  );
                  $("#disciplinaryactionid").append(actionoptions);

                  $("#disciplinaryactionid").val(value.actioncode);

                  console.log(value.actioncode);

                  var offenceoption = new Option(
                    value.offencename,
                    value.offencename
                  );
                  $(offenceoption).html(value.offencename);
                  $("#disciplinaryoffenseid").append(offenceoption);

                  $("#disciplinaryoffenseid").val(value.offencename);

                  console.log(value.offencename);
                });
              },
              error: function (error) {},
            });
          } catch (error) {
            console.error("Error parsing response data:", error);
          }
        },
        error: function (xhr, status, error) {
          console.error("AJAX request failed:", error);
        },
      });
    });

    $("#disciplinaryoffenseid").on("change", function () {
      var offensename = $(this).val();
      var description = $("#disciplinaryviolationid").val();

      console.log(offensename);
      $.ajax({
        type: "POST",
        url: "/disciplinary/getactionoffense",
        data: {
          description: description,
        },

        success: function (result) {
          try {
            // console.log(result.data);
            var data = result.data;
            let actioncode = data[0].actioncode;

            $.ajax({
              type: "POST",
              url: "/disciplinary/getoffenseaction",
              data: {
                actioncode: actioncode,
                offenceid: offensename,
              },
              success: function (result) {
                var data = result.data;

                console.log(data);
                $.each(data, function (index, value) {
                  $("#disciplinaryactionid").val(value.actioncode);

                  console.log(`${value.actioncode} - ${value.description}`);
                });
              },
            });
          } catch (error) {
            console.error("error:", error);
          }
        },
        error: function (xhr, status, error) {
          console.error("ajax request failed", error);
        },
      });
    });

    function LoadListOffensename() {
      $.ajax({
        type: "GET",
        url: "/offenses/load",
        success: function (result) {
          console.log(result.data);
          var data = result.data;

          $.each(data, function (key, item) {
            var options = new Option(item.offensename, item.offensename);
            $(options).html(item.offensename);
            $("#disciplinaryoffenseid").append(options);
            console.log(item.offensename);
