
<div class="hrmislogin-form">

    <div class="container hrmislogin-container">
        <div class="main hrmislogin-main">
        
            <div class="content hrmislogin-content">
              <img src="/images/img/whitelogo.png" alt="Logo" class="img-fluid hrmislogin-logo">
              
                <h2>TEAM LEADER | Log In</h2>
                <form>
                  <select id="loginUrl" class="form-control">
                    <option selected disabled>Choose Portal To Login</option>
                    <option value="/">Admin</option>
                    <option value="/">Employee</option>
                    <option value="/">HR</option>
                    <option value="/">Payroll Login</option>
                    <option value="/teamleadlogin">Team Leader Login</option>
                    <option value="/teamleadlogin">Super Visor Login</option>
                    <option value="/ojtlogin">OJT Login</option>
                  </select>
                  <div class="form-outline">
                    <label class="form-label label-username" for="username">Username</label>
                    <input type="email" id="username" class="form-control fmc-ojt-login"
                      placeholder="Phone number or email address"> 
                  </div>
                  <div class="form-outline">
                    <div class="form-group">
                      <label for="password" class="label-password">Password</label>
                      <div class="input-group">
                        <input type="password" class="form-control" id="password">
                      </div>
                    </div>
                  </div>
                    
                    <button class="btn hrmislogin-btn-login" id="loginBtn" type="submit">
                        Log In
                    </button>
                </form>
                <p class="account">Forgot your password?</p>
            </div>
           <div class="overlay"></div>
            <div class="form-img hrmislogin-form-img">
