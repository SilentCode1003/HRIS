<!-- View Modal -->
<div class="modal fade" id="viewadjournmentmodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
      <div class="modal-content">
          <div class="modal-header" id="modal-header">
              <h3 class="modal-title fs-5" id="exampleModalLabel">View Employee Adjournment</h3>
              <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
            </div>
            <div class="modal-body" id="modal-body">
              <br>
              <br>
              <div class="row">
                <div class="col-xl-2 col-lg-4" style="margin-left: 10px;">
                  <div class="col g-6">
                      <div class="p-4" style="width: 300px; margin-top: -100px;">
                          <div class="text-center">
                              <img id="previewold" src="https://via.placeholder.com/250" class="border border-5 border-form-modal" alt="placeholder">
                          </div>
                          <br>
                          <h2 class="pb-3 mb-4 text-center modal-content-title">File Preview</h2>
                      </div>
                  </div>
              </div>
              <div class="col-xl-8 col-lg-7" style="margin-left: 150px;">
                  <form>
                      <br>
                      <div class="row g-3">
                          <div class="col">
                              <div class="form-floating">
                                  <select class="form-select border-form-modal" id="viewadjournemployee" name="viewadjournemployee" aria-label="Floating label select example" disabled>
                                  </select>
                                  <label for="floatingSelectGrid">Employee ID</label>
                              </div>
                          </div>
                          <div class="col">
                              <div class="form-floating">
                                  <input type="text" class="form-control border-form-modal" id="viewadjourntitle" name="viewadjourntitle" placeholder="Title"disabled>
                                  <label for="adjourntitle">Title</label>
                              </div>
                          </div>
                      </div>
                      <br>
                      <div class="row g-3">
                          <div class="col">
                              <div class="form-floating">
                                  <select class="form-select border-form-modal" id="viewajournstatus" name="viewajournstatus" aria-label="Floating label select example"disabled>
                                      <option value="Active">Active</option>
                                      <option value="Inactive">Inactive</option>
                                      <option value="Lifted">Lifted</option>
                                  </select>
                                  <label for="floatingSelectGrid">Status</label>
                              </div>
                          </div>
                          <div class="col">
                              <div class="form-floating">
                                  <input type="date" class="form-control border-form-modal" id="viewadjournstart" name="viewadjournstart" placeholder="Start Date"disabled>
                                  <label for="floatingInput">Start Date</label>
                              </div>
                          </div>
                          <div class="col">
                              <div class="form-floating">
                                  <input type="date" class="form-control border-form-modal" id="viewadjournend" name="viewadjournend" placeholder="End Date" disabled>
                                  <label for="floatingInput">End Date</label>
                              </div>
                          </div>
                      </div>
                      <br>
                      <div class="row g-3">
                        <div class="col">
                            <div class="form-floating">
                                <select class="form-select border-form-modal" id="adjournpayrolldate" name="adjournpayrolldate" aria-label="Floating label select example">
                                    <option disabled selected>Choose Payroll Date</option>
                                </select>
                                <label for="floatingSelectGrid">Payroll Date</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="adjourndailyrate" name="adjourndailyrate" placeholder="Adjournement Total Pay"disabled>
                                <label for="floatingInput">Daily Rate</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="adjournementotalpay" name="adjournementotalpay" placeholder="Adjournement Total Pay"disabled>
                                <label for="floatingInput">Total Adjournment Pay</label>
                            </div>
                        </div>
                    </div>
                    <br>
                      <div class="row g-3">
                          <label for="hoursInput">Adjournement Description</label>
                          <div class="col">
                              <div class="form-floating">
                                  <textarea type="text" class="form-control border-form-modal" id="viewadjourndesc" name="viewadjourndesc" placeholder="Address" style="height: 8rem;" oninput="adjustTextareaHeight(this)" disabled></textarea>
                                  <label for="floatingInput">Adjournement Description</label>
                              </div>
                          </div>
                      </div>
                  </form>
              </div>
              
              <!-- Table at the bottom -->
              <div class="col-xl-12 col-lg-12 mt-4">
                  <div class="table-responsive">
                      <table class="table table-bordered table-striped">
                          <thead class="table-dark">
                              <tr>
                                  <th scope="col">Employee ID</th>
                                  <th scope="col">Dates</th>
                                  <th scope="col">Day Name</th>
                                  <th scope="col">Status</th>
                              </tr>
                          </thead>
                          <tbody>
                          </tbody>
                      </table>
                  </div>
              </div>
              </div>
            </div>
