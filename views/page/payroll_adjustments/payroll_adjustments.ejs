<!-- Table -->
<div class="card" id="tablecard">
    <div class="card-header ch-coop">
      <h3 class="title-card-table m-4">Payroll Adjustments</h3>
      <div class="row gap-4 m-2 mb-4">
        <div class="col">
          <input id='myInput' class="pl-2 font-weight-bold" type='text' placeholder="  Search....">
        </div>
        <div class="col-sm-1 col-add">
          <button type="button" class="btn btn-add-color" data-bs-toggle="modal" data-bs-target="#adjustmentmodal">
            <b>+ Add</b>
          </button>
        </div>
      </div> 
    </div>
    <div class="card-body">
        <div class="table-responsive"  id="table-responsive-id">
            <table class="table table-light table-bordered" id="dataTablePayrollAdjustments">
                <thead>
                    <tr>
                        <th class="col-sm-1">ID</th>
                        <th>Employee Name</th>
                        <th>Adjustment Type</th>
                        <th>Amount</th>
                        <th>Payroll Date</th>
                        <th>Create By</th>
                        <th>Status</th>
                        <th class="col-sm-1">Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="adjustmentmodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header" id="modal-header">
                <h3 class="modal-title fs-5" id="exampleModalLabel">Add Payroll Adjustments?</h3>
                <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
              </div>
              <div class="modal-body" id="modal-body">
                <br>
                <br>
                <div class="row">
                  <div class="col-xl-2 col-lg-4" style="margin-left: 10px;">
                    <div class="col g-6">
                      <div class="p-4" style="width: 300px; margin-top: -100px;">
                        <div class="text-center">
                          <img id="previewleave" src="https://via.placeholder.com/250" class="border border-5 border-form-modal" alt="placeholder">
                        </div>
                        <br>
                        <h2 class="pb-3 mb-4 text-center modal-content-title">File  Preview</h2>
                      </div>
                    </div>
                  </div>
                  <div class="col-xl-8 col-lg-7" style="margin-left: 150px;">
                    <form>
                      <br>
                      <div class="row g-3">
                        <div class="col">
                            <div class="form-floating">
                                <select class="form-select border-form-modal" id="paemployeename" name="paemployeename" aria-label="Floating label select example">
                                </select>
                                <label for="floatingSelectGrid">Employee Name</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                                <select class="form-select border-form-modal" id="papayrolldate" name="papayrolldate" aria-label="Floating label select example">
                                </select>
                                <label for="floatingSelectGrid">Payroll Date</label>
                            </div>
                        </div>  
                      </div>                             
                      <br>
                      <div class="row g-3">
                        <div class="col">
                            <div class="form-floating">
                              <select class="form-select border-form-modal" id="patype" name="patype" aria-label="Floating label select example">
                                <option>Missed Logs</option>
                                <option>Late OT Application</option>
                                <option>Late Effectivity Of Increase</option>
                                <option>Other Adjustments</option>
                              </select>
                              <label for="floatingInput">Adjustments Type</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="paamount" name="paamount"
                                    placeholder="Adjustment Amount" oninput="formatPrice(event, this)">
                                <label for="paamount">Adjustment Amount</label>
                            </div>
                        </div>
                      </div>
                      <br>
                    <div class="row g-3">
                        <div class="col">
                          <div class="form-floating">
                            <input type="date" class="form-control border-form-modal" id="paorigindate" name="paorigindate"
                              placeholder="Reason">
                            <label for="floatingInput">Origin Date</label>
                          </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                              <textarea type="text" class="form-control border-form-modal" id="pareason" name="pareason"
                                placeholder="Reason"></textarea>
                              <label for="floatingInput">Reason</label>
                            </div>
                        </div>
                    </div>
                    </form>
                  </div>
                </div>
              </div>
              <div class="modal-footer" id="modal-footer">
                <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-modal-save" id="adjustmentsavebtn">Save</button>
            </div>
        </div>
    </div>
</div>
