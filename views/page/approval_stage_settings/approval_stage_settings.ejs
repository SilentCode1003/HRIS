<!-- Table -->
<div class="card" id="tablecard">
    <div class="card-header ch-coop">
      <h3 class="title-card-table">Approval Stage Settings</h3>
      <div class="row g-2">
        <div class="col">
          <input id='myInput' type='text' placeholder="  Search....">
        </div>
        <div class="col-sm-1 col-add">
          <button type="button" class="btn btn-add-color" data-bs-toggle="modal" data-bs-target="#assmodal">
            <b>+ Add</b>
          </button>
        </div>
      </div> 
    </div>
    <div class="card-body">
        <div class="table-responsive"  id="table-responsive-id">
            <table class="table table-light table-bordered" id="dataTableapprovalstage">
                <thead>
                    <tr>
                        <th class="col-sm-1">ID</th>
                        <th>Department Name</th>
                        <th>Sub Group</th>
                        <th>Access Name</th>
                        <th>Approve Count Need</th>
                        <th>Created By</th>
                        <th>Create Date</th>
                        <th class="col-sm-1">Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="assmodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header" id="modal-header">
          <lord-icon src="https://cdn.lordicon.com/pdsourfn.json" stroke="bold"
        colors="primary:#9cf4a7,secondary:#109121,tertiary:#ebfad1" class="db-hrmis"></lord-icon>
          <h3 class="modal-title" id="exampleModalLabel">Add Approve Need</h3>
          <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
        </div>
        <div class="modal-body" id="modal-body">
            <form>
                <div class="row g-3">
                    <div class="col">
                        <div class="form-floating">
                            <select class="form-select border-form-modal" id="accessid" name="accessid" aria-label="Floating label select example">
                            </select>
                            <label for="floatingSelectGrid">Access Name</label>
                        </div>
                    </div>
                </div>
                <br>
                <div class="row g-3">
                  <div class="col">
                    <div class="form-floating">
                      <select class="form-select border-form-modal" id="stagedepartmentname" name="stagedepartmentname">
                        <option selected disabled>--Select Department--</option>
                      </select>
                      <label for="floatingSelectGrid">Department Name</label>
                    </div>
                  </div>
                </div>
                <br>
                <div class="row g-3">
                  <div class="col">
                    <div class="form-floating">
                      <select class="form-select border-form-modal" id="stagesubgroupname" name="stagesubgroupname">
                      </select>
                      <label for="floatingSelectGrid">Subgroup Name</label>
                    </div>
                  </div>
                </div>
                <br>
                <div class="row g-3">
                  <div class="col">
                    <div class="form-floating">
                        <input type="number" class="form-select border-form-modal" id="approvecount" name="approvecount" aria-label="Floating label select example">
                        <label for="floatingSelectGrid">Approve Count</label>
                    </div>
                  </div>
                </div>
            </form>
        </div>
        <div class="modal-footer" id="modal-footer">
          <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-modal-save" id="approvalstagesavebtn">Save</button>
        </div>
      </div>
    </div>
  </div>

