<div class="modal fade" id="otapprovalmodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
      <div class="modal-content">
          <div class="modal-header" id="modal-header">
              <h3 class="modal-title fs-5" id="exampleModalLabel">Approve This Overtime Meal</h3>
              <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
            </div>
            <div class="modal-body" id="modal-body">
              <br>
              <br>
              <div class="row">
                <div class="col-xl-2 col-lg-4" style="margin-left: 10px;">
                  <div class="col g-6">
                    <div class="p-4" style="width: 300px; margin-top: -100px;">
                      <div class="text-center">
                        <img id="previewleave" src="https://via.placeholder.com/250" class="border border-5 border-form-modal" alt="placeholder">
                      </div>
                      <br>
                      <h2 class="pb-3 mb-4 text-center modal-content-title">File  Preview</h2>
                    </div>
                  </div>
                </div>
                <div class="col-xl-8 col-lg-7" style="margin-left: 150px;">
                  <form>
                    <br>
                    <div class="row g-3">
                      <div class="col">
                        <div class="form-floating">
                          <select type="text" class="form-control border-form-modal" id="mealfullname" name="mealfullname" disabled>
                            <option></option>
                          </select>
                          <label for="floatingInput">Full Name</label>
                        </div>
                      </div>
                      <div class="col">
                          <div class="form-floating">
                            <input type="text" class="form-control border-form-modal" id="mealattendancedate" name="mealattendancedate" disabled>
                            <label for="floatingInput">Attendace Date</label>
                          </div>
                      </div>  
                    </div>                             
                    <br>
                    <div class="row g-3">
                      <div class="col">
                          <div class="form-floating">
                            <input type="datetime-local" class="form-control border-form-modal" id="mealclockin" name="mealclockin" disabled
                            placeholder="Address">
                            <label for="floatingInput">Clock In</label>
                          </div>
                      </div>
                      <div class="col">
                          <div class="form-floating">
                            <input type="datetime-local" class="form-control border-form-modal" id="mealclockout" name="mealclockout" disabled
                            placeholder="Address">
                            <label for="floatingInput">Clock Out</label>
                          </div>
                      </div>
                    </div>
                    <br>
                    <div class="row g-3">
                      <div class="col">
                        <div class="form-floating">
                          <input type="number" class="form-control border-form-modal" id="mealtotalot" name="mealtotalot" disabled
                          placeholder="Address">
                          <label for="floatingInput">Total Overtime</label>
                        </div>
                      </div>
                      <div class="col">
                        <div class="form-floating">
                          <select class="form-select border-form-modal" id="mealpayrolldate" name="mealpayrolldate"
                            aria-label="Floating label select example" disabled>
                         </select>
                         <label for="floatingInput">Pyroll Date</label>
                        </div>
                      </div>
                    </div>
                    <br>
                    <div class="row g-3">
                      <div class="col">
                        <div class="form-floating">
                          <input type="number" class="form-control border-form-modal" id="mealapprovecount" name="mealapprovecount" disabled
                          placeholder="Address">
                          <label for="floatingInput">Approval Count</label>
                        </div>
                      </div>
                      <div class="col">
                        <div class="form-floating">
                          <input type="number" class="form-control border-form-modal" id="mealamount" name="mealamount" disabled
                          placeholder="Address">
                          <label for="floatingInput">OT Meal Amount</label>
                        </div>
                      </div>
                      <div class="col">
                        <div class="form-floating">
                          <input type="datetime-local" class="form-control border-form-modal" id="mealapplieddate" name="mealapplieddate" disabled
                          placeholder="Address">
                         <label for="floatingInput">Applied Date</label>
                        </div>
                      </div>
                      <div class="col">
                        <div class="form-floating">
                          <select class="form-select border-form-modal" id="mealsubgroup" name="mealsubgroup"
                          aria-label="Floating label select example"disabled>
                          <option></option>
                          </select>
                          <label for="floatingInput">Subgroup</label>
                        </div>                    
                      </div>
                    </div>
                  <br>
                  <div class="row g-3">
                      <div class="col">
                          <div class="form-floating">
                            <textarea type="text" class="form-control border-form-modal" id="mealcomment" name="mealcomment"
                              placeholder="Comment"></textarea>
                            <label for="floatingInput">Comment</label>
                          </div>
                      </div>
                      <div class="col">
                        <div class="form-floating">
                          <select class="form-select border-form-modal" id="mealstatus" name="mealstatus"
                          aria-label="Floating label select example">
                          <option value="Approved">Approved</option>
                          <option value="Rejected">Rejected</option>
                          </select>
                          <label for="floatingInput">Status</label>
                        </div>                    
                      </div>
                  </div>
                    <br>
                  </form>
                </div>
              </div>
            </div>
            <div class="modal-footer" id="modal-footer">
              <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-modal-save" id="mealsavebtn">Save</button>
          </div>
      </div>
  </div>
</div>
