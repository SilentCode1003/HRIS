<!-- Table -->
<div class="card" id="tablecard">
    <div class="card-header ch-coop">
        <h3 class="title-card-table m-4">Attendance</h3>
        <div class="d-flex gap-4 m-2 mb-4 attendance-field">
            <div class="col">
                <input id='myInput' class="pl-2 font-weight-bold" type='text' placeholder="  Search....">
            </div>
        
           <div class="d-flex gap-4 attendance-field">
            <div class="flex">
                <input id="datepicker" class="text-center font-weight-bold"  type="text" name="daterange">
            </div>
            <div class="flex">
                <button id="loaddate" class="btn btn-load-color"><i class="bi bi-arrow-clockwise mr-2"></i><b>Load</b></button>
            </div>
        
            <div class="flex">
                <button id="checklogs" class="btn btn-check-color"><i class="bi bi-ui-checks mr-2"></i><b>Check Logs</b></button>
            </div>
        
            <div class="flex">
                <button id="reportsBtn" class="btn btn-attendance-color"><i class="bi bi-card-list mr-2"></i><b>Attendance Reports</b></button>
            </div>
        
            <div class="flex">
                <button class="btn btn-empPer-color" data-bs-toggle="modal" data-bs-target="#openModalButton">
                    <i class="bi bi-person-check mr-2"></i><b>Export Per Employee</b>
                </button>
            </div>
            <!-- <div class="flex">
                <button id="exportBtn" class="btn btn-export-color"><i class="bi bi-database-fill-gear mr-2"></i><b>Export</b></button>
            </div> -->
            <div class="flex">
                <button id="importExcelBtn" class="btn btn-import-color"><i class="bi bi-box-arrow-in-down mr-2"></i><b>Import</b></button>
            </div>
           </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive" id="table-responsive-id">
            <table class="table table-light table-bordered" id="dataTableattendance">
                <thead>
                        <!-- <th>Image</th> -->
                        <th class="col-sm-1">ID</th>
                        <th class="col-25">Name</th>
                        <th>Date</th>
                        <th class="col-sm-1">Time In</th>
                        <th class="col-sm-1">Time Out</th>
                        <th>Device In</th>
                        <th>Device Out</th>
                        <th class="col-sm-1">Total Hours</th>
                        <th class="col-sm-1">Action</th>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!--Export Employee Modal-->
<div class="modal fade" id="openModalButton" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header" id="modal-header">
          <h1 class="modal-title" id="exampleModalLabel">Export Employee Attendance</h1>
          <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
        </div>
        <div class="modal-body" id="modal-body">
          <form>
            <div class="row g-3">
                <div class="col">
                    <div class="form-floating">
                      <select class="form-select border-form-modal" id="employeename" name="employeename"
                        aria-label="Floating label select example">
                        <option selected>Choose</option>
                      </select>
                      <label for="floatingSelectGrid">Select Employee</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input id="datepickermodal" class="form-select border-form-modal" type="text" name="daterangemodal" />
                        <label for="floatingSelectGrid">Select Date</label>
                    </div>
                </div>
            </div>
          </form>
        </div>
        <div class="modal-footer" id="modal-footer">
          <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-modal-upload" id="exportemployeeattendance">Download</button>
        </div>
      </div>
    </div>
</div>

