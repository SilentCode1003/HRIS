<br />
<!-- Table -->
<div class="card" id="tablecard">
  <div class="card-header ch-coop">
    <h3 class="title-card-table m-4">Apps</h3>
    <div class="row gap-4 m-2 mb-4">
      <div class="col">
        <input
          id="myInput"
          class="pl-2 font-weight-bold"
          type="text"
          placeholder="  Search...."
        />
      </div>
      <div class="col-sm-1 col-add">
        <button
          class="btn btn-add-color"
          data-bs-toggle="modal"
          data-bs-target="#addmodal"
        >
          <b>+ Add</b>
        </button>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="table-responsive-sm" id="table-responsive-id">
      <table class="table table-striped-light" id="dataTableappdetails">
        <thead>
          <tr>
            <th>Image</th>
            <th>ID</th>
            <th>App Name</th>
            <th>App Details</th>
            <th class="col-25">Version</th>
            <th>Date</th>
            <th>Create By</th>
            <th class="col-sm-1">Action</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>

<!--Modal-->
<div
  class="modal fade"
  id="addmodal"
  data-bs-backdrop="static"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header" id="modal-header">
        <lord-icon
          src="https://cdn.lordicon.com/pdsourfn.json"
          stroke="bold"
          colors="primary:#9cf4a7,secondary:#109121,tertiary:#ebfad1"
          class="db-hrmis"
        ></lord-icon>
        <h1 class="modal-title" id="exampleModalLabel">Add Apps</h1>
        <i class="bx bx-x" data-bs-dismiss="modal" aria-label="CLose"></i>
      </div>
      <div class="modal-body" id="modal-body">
        <div class="card-body text-center card-app-add">
          <form>
            <div class="row">
              <div class="text-center">
                <img
                  id="preview"
                  src="/images/img/5L.png"
                  class="rounded rounded-circle border-form-modal"
                  alt="placeholder"
                  style="
                    width: 150px;
                    height: 150px;
                    margin-top: 20px;
                    margin-bottom: 10px;
                  "
                />
              </div>
            </div>

            <div class="row">
              <div class="col-auto app-form">
                <input
                  type="file"
                  name="appsprofile"
                  id="appsprofile"
                  class="form-control app-form-c"
                  accept="image/*"
                />
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label for="addappname">Apps Name</label>
                <input
                  type="text"
                  class="form-control border-app-form"
                  id="addappname"
                  placeholder="Apps Name"
                />
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label for="addappdetails">Details</label>
                <input
                  type="text"
                  class="form-control border-app-form"
                  id="addappdetails"
                  placeholder="Details"
                />
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label for="addappversion">Version</label>
                <input
                  type="text"
                  class="form-control border-app-form"
                  id="addappversion"
                  placeholder="Version"
                />
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="modal-footer" id="modal-footer">
        <button
          type="button"
          class="btn btn-modal-close"
          data-bs-dismiss="modal"
        >
          Close
        </button>
        <button type="button" class="btn btn-modal-save" id="saveaddapps">
          Save
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Edit Modal -->

<div
  class="modal fade"
  id="editmodal"
  data-bs-backdrop="static"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header" id="modal-header">
        <lord-icon
          src="https://cdn.lordicon.com/lsrcesku.json"
          stroke="bold"
          colors="primary:#242424,secondary:#e8e230,tertiary:#e83a30,quaternary:#d1f3fa"
          class="db-hrmis"
        >
        </lord-icon>
        <h1 class="modal-title" id="exampleModalLabel">Edit Apps</h1>
        <i class="bx bx-x" data-bs-dismiss="modal" aria-label="CLose"></i>
      </div>
      <div class="modal-body" id="modal-body">
        <!-- Card Body -->
        <div class="card-body text-center card-app-edit">
          <form>
            <div class="row">
              <div class="text-center">
                <img
                  id="editpreview"
                  src="/images/img/5L.png"
                  class="rounded rounded-circle border-form-modal"
                  alt="placeholder"
                  style="
                    width: 150px;
                    height: 150px;
                    margin-top: 20px;
                    margin-bottom: 10px;
                  "
                />
              </div>
            </div>

            <div class="row">
              <div class="col-auto app-form">
                <input
                  type="file"
                  name="editappimage"
                  id="editappimage"
                  class="form-control app-form-c"
                  accept="image/*"
                />
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label for="editappname">Apps Name</label>
                <input
                  type="text"
                  class="form-control border-app-form"
                  id="editappname"
                  placeholder="Apps Name"
                />
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label for="editappdetails">Details</label>
                <input
                  type="text"
                  class="form-control border-app-form"
                  id="editappdetails"
                  placeholder="Details"
                />
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label for="editappversion">Version</label>
                <input
                  type="text"
                  class="form-control border-app-form"
                  id="editappversion"
                  placeholder="Version"
                />
              </div>
            </div>
          </form>
        </div>
      </div>

      <div class="modal-footer" id="modal-footer">
        <button
          type="button"
          class="btn btn-modal-close"
          data-bs-dismiss="modal"
        >
          Close
        </button>
        <button type="button" class="btn btn-modal-save" id="saveditapps">
          Save
        </button>
      </div>
    </div>
  </div>
</div>
