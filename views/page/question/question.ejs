<!-- Table -->
<div class="card" id="tablecard">
    <div class="card-header ch-coop">
        <h3 class="title-card-table m-2">List Of Questions</h3>
        <div class="row g-2 m-2 mb-4">
            <div class="col">
                <input id='myInput' class="pl-2 font-weight-bold" type='text' placeholder="  Search....">
            </div>
            <div class="col-sm-1 col-add">
                <button type="button" class="btn btn-add-color" data-bs-toggle="modal" data-bs-target="#addquestionmodal">
                    <b>+ Add</b>
                  </button>
            </div>
        </div>    
    </div>
    <div class="card-body">
        <div class="table-responsive" id="table-responsive-id">
            <table class="table table-light table-bordered" id="dataTableQuestion">
                <thead>
                    <tr>
                        <th class="col-sm-1">ID</th>
                        <th>Exam Name</th>
                        <th>Question Type</th>
                        <th>Question Answer</th>
                        <th>Question Points</th>
                        <th>Question Created Date</th>
                        <th>Question Created By</th>
                        <th class="col-sm-1">Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
</div>
<!-- Modal -->
<div class="modal fade" id="addquestionmodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header" id="modal-header">
                <lord-icon src="https://cdn.lordicon.com/pdsourfn.json" stroke="bold"
                           colors="primary:#9cf4a7,secondary:#109121,tertiary:#ebfad1" class="db-hrmis"></lord-icon>
                <h3 class="modal-title" id="exampleModalLabel">Add Question to this Exam</h3>
                <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
            </div>
            <div class="modal-body" id="modal-body">
                <form>
                    <div class="row g-3">
                        <div class="col">
                            <div class="form-floating">
                                <select class="form-select border-form-modal" id="examname" name="examname" aria-label="Floating label select example">
                                    <option selected disabled>Select Exam</option>
                                </select>
                                <label for="floatingSelectGrid">Exam Name</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="addquestionduration" name="addquestionduration" placeholder="First Name" readonly>
                                <label for="floatingInput">Exam Duration</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                                <select class="form-select border-form-modal" id="questiontype" name="questiontype" aria-label="Floating label select example">
                                    <option selected disabled>Select Question Type</option>
                                </select>
                                <label for="floatingSelectGrid">Question Type</label>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="row g-3">
                        <label for="hoursInput">Question Description</label>
                        <div class="col">
                            <div class="form-floating">
                                <textarea type="text" class="form-control border-form-modal" id="addquestiondescription" name="addquestiondescription"
                                          placeholder="Address" oninput="adjustTextareaHeight(this)"></textarea>
                                <label for="floatingInput">Question Description</label>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="row g-3">
                        <div class="col">
                            <div class="form-floating">
                                <label class="form-label" for="EditFile"></label>
                                <input type="file" name="addquestionimage" id="addquestionimage" class="form-control border-form-modal"
                                       accept="image/*">
                            </div>
                            <div class="text-center">
                                <img id="previewleave" src="https://via.placeholder.com/250" style="width: 250px; height: 250px;"
                                     class="rounded border-form-modal" alt="placeholder">
                            </div>
                        </div>
                        <div class="col">
                            <div class="col">
                                <div class="form-floating">
                                    <div id="choicesContainer">
                                        <!-- Choices will be dynamically added here -->
                                    </div>
                                    <button type="button" id="addChoiceBtn" class="btn btn-primary">Add Choice</button>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="col">
                                <div class="form-floating">
                                    <select class="form-select border-form-modal" id="addexamanswer" name="addexamanswer" aria-label="Floating label select example">
                                        <option selected disabled>Select Answer</option>
                                    </select>
                                    <label for="floatingSelectGrid">Answer</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                </form>
            </div>
            <div class="modal-footer" id="modal-footer">
                <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-modal-save" id="examsavebtn">Save</button>
            </div>
        </div>
    </div>
</div>




