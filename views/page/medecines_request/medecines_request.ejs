<br>

<!-- Table -->
<div class="card" id="tablecard">
    <div class="card-header ch-coop">
      <h3 class="title-card-table m-4">Medicine Request</h3>
      <div class="row g-2 m-2 mb-4">
        <div class="col">
          <input id='myInput' class="pl-2 font-weight-bold" type='text' placeholder="  Search....">
        </div>
        <div class="col-sm-1 col-add">
          <button type="button" class="btn btn-add-color" data-bs-toggle="modal" data-bs-target="#medreqmodal">
            <b>+ Add</b>
          </button>
        </div>
      </div> 
    </div>
    <div class="card-body">
        <div class="table-responsive"  id="table-responsive-id">
            <table class="table table-striped-light" id="dataTableMedecineRequest">
                <thead>
                    <tr>
                        <th class="col-sm-1">ID</th>
                        <th>Employee Name</th>
                        <th>Medicine Name</th>
                        <th>Quantity</th>
                        <th>Medecine Category</th>
                        <th>Quantity Request</th>
                        <th>Request Date</th>
                        <th>Approved By</th>
                        <th class="col-sm-1">Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="medreqmodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header" id="modal-header">
                <h3 class="modal-title fs-5" id="exampleModalLabel">Add Medicine</h3>
                <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
              </div>
              <div class="modal-body" id="modal-body">
                <br>
                <br>
                <div class="row">
                  <div class="col-xl-2 col-lg-4" style="margin-left: 10px;">
                    <div class="col g-6">
                      <div class="p-4" style="width: 300px; margin-top: -100px;">
                        <div class="text-center">
                          <img id="previewleave" src="https://via.placeholder.com/250" class="border border-5 border-form-modal" alt="placeholder">
                        </div>
                        <br>
                        <h2 class="pb-3 mb-4 text-center modal-content-title">File  Preview</h2>
                      </div>
                    </div>
                  </div>
                  <div class="col-xl-8 col-lg-7" style="margin-left: 150px;">
                    <form>
                      <br>
                      <div class="row g-3">
                        <div class="col">
                            <div class="form-floating">
                                <select class="form-select border-form-modal" id="medreqemployeename" name="medreqemployeename" aria-label="Floating label select example">
                                  <option selected disabled>Choose Employee</option>
                                </select>
                                <label for="floatingSelectGrid">Employee Name</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                                <select class="form-select border-form-modal" id="medreqname" name="medreqname" aria-label="Floating label select example">
                                    <option selected disabled>Select Medicine</option>
                                </select>
                                <label for="floatingSelectGrid">Medicine Name</label>
                            </div>
                        </div>  
                        <div class="col">
                          <div class="form-floating">
                              <input type="text" class="form-control border-form-modal" id="medreqtotalquantity" name="medreqtotalquantity"
                                  placeholder="Adjustment Amount" disabled>
                              <label for="medreqtotalquantity">Total Available (pcs)</label>
                          </div>
                      </div>
                      </div>                             
                      <br>
                      <div class="row g-3">
                        <div class="col">
                            <div class="form-floating">
                                <input type="number" class="form-control border-form-modal" id="medrequsetednumber" name="medrequsetednumber"
                                    placeholder="Adjustment Amount">
                                <label for="medrequsetednumber">Medicine Requested</label>
                            </div>
                        </div>
                        <div class="col">
                          <div class="form-floating">
                            <select class="form-control border-form-modal" id="medrequnit" name="medrequnit" disabled>
                              <option selected disabled>Choose...</option>
                              <option value="mg">mg</option>
                              <option value="ml">ml</option>
                              <option value="g">g</option>
                            </select>
                            <label for="quantityUnit">Unit</label>
                          </div>
                        </div>
                        <div class="col">
                          <div class="form-floating">
                              <input type="number" class="form-control border-form-modal" id="medreqdossage" name="medreqdossage"
                                  placeholder="Adjustment Amount" disabled>
                             <label for="quantityUnit">Dossage</label>
                          </div>
                        </div>
                      </div>
                      <br>
                    <div class="row g-3">
                        <div class="col">
                            <div class="form-floating">
                              <textarea type="text" class="form-control border-form-modal" id="medreqreason" name="medreqreason"
                                placeholder="Reason"></textarea>
                              <label for="floatingInput">Reason</label>
                            </div>
                        </div>
                    </div>
                    </form>
                  </div>
                </div>
              </div>
              <div class="modal-footer" id="modal-footer">
                <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-modal-save" id="medreqsavebtn">Save</button>
            </div>
        </div>
    </div>
</div>


<!-- Edit Modal -->
<div class="modal fade" id="viewmedreqmodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
      <div class="modal-content">
          <div class="modal-header" id="modal-header">
              <h3 class="modal-title fs-5" id="exampleModalLabel">View Request</h3>
              <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
            </div>
            <div class="modal-body" id="modal-body">
              <br>
              <br>
              <div class="row">
                <div class="col-xl-2 col-lg-4" style="margin-left: 10px;">
                  <div class="col g-6">
                    <div class="p-4" style="width: 300px; margin-top: -100px;">
                      <div class="text-center">
                        <img id="preview" src="https://via.placeholder.com/250" class="border border-5 border-form-modal" alt="placeholder">
                      </div>
                      <br>
                      <h2 class="pb-3 mb-4 text-center modal-content-title">File  Preview</h2>
                    </div>
                  </div>
                </div>
                <div class="col-xl-8 col-lg-7" style="margin-left: 150px;">
                  <form>
                    <br>
                    <div class="row g-3">
                      <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control border-form-modal" id="reqmedempname" name="reqmedempname"
                                placeholder="Adjustment Amount" disabled>
                            <label for="medrequsetednumber">Requesting Employee</label>
                        </div>
                    </div>
                      <div class="col">
                        <div class="form-floating">
                          <input type="text" class="form-control border-form-modal" id="reqmedmedname" name="reqmedmedname"
                              placeholder="Adjustment Amount" disabled>
                          <label for="medrequsetednumber">Medicine Name</label>
                      </div>
                      </div>  
                      <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control border-form-modal" id="reqmedreqtotal" name="reqmedreqtotal"
                                placeholder="Adjustment Amount" disabled>
                            <label for="medreqtotalquantity">Total Requested (pcs)</label>
                        </div>
                    </div>
                    </div>                             
                    <br>
                    <div class="row g-3">
                      <div class="col">
                          <div class="form-floating">
                              <input type="text" class="form-control border-form-modal" id="reqmedverifier" name="reqmedverifier"
                                  placeholder="Adjustment Amount" disabled>
                              <label for="medrequsetednumber">Verifier</label>
                          </div>
                      </div>
                      <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control border-form-modal" id="reqmeddossage" name="reqmeddossage"
                                placeholder="Adjustment Amount" disabled>
                            <label for="medrequsetednumber">Dossage</label>
                        </div>
                    </div>
                      <div class="col">
                        <div class="form-floating">
                            <input type="datetime-local" class="form-control border-form-modal" id="reqmedreqdate" name="reqmedreqdate"
                                placeholder="Adjustment Amount" disabled>
                           <label for="quantityUnit">Requested Date</label>
                        </div>
                      </div>
                    </div>
                    <br>
                  <div class="row g-3">
                      <div class="col">
                          <div class="form-floating">
                            <textarea type="text" class="form-control border-form-modal" id="reqmedreason" name="reqmedreason"
                              placeholder="Reason" disabled></textarea>
                            <label for="floatingInput">Reason</label>
                          </div>
                      </div>
                  </div>
                  </form>
                </div>
              </div>
            </div>
            <div class="modal-footer" id="modal-footer">
              <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
          </div>
      </div>
  </div>
</div>
