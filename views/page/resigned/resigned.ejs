<!-- Modal -->
<div class="modal fade" id="resignedmodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header" id="modal-header">
          <lord-icon src="https://cdn.lordicon.com/pdsourfn.json" stroke="bold"
        colors="primary:#9cf4a7,secondary:#109121,tertiary:#ebfad1" class="db-hrmis"></lord-icon>
          <h3 class="modal-title" id="exampleModalLabel">Add RESIGNED EMPLOYEE</h3>
          <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
        </div>
        <div class="modal-body" id="modal-body">
            <form>
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select border-form-modal" id="resignedemployee" name="resignedemployee" aria-label="Floating label select example">
                          <option selected>Choose..</option>
                        </select>
                        <label for="floatingSelectGrid">Employee</label>
                      </div>
                </div>
                 <br>
                  <div class="col">
                    <div class="form-floating">
                    <input type="text" class="form-control border-form-modal" id="resignedreason" name="resignedreason">
                    <label for="floatingInput">Reason</label>
                    </div>
                </div>
                <br>
                <div class="col">
                    <div class="form-floating">
                    <input type="date" class="form-control border-form-modal" id="dateresigned" name="dateresigned">
                    <label for="floatingInput">Date Resigned</label>
                    </div>
                </div>
                <br>
                    <div class="col">
                        <div class="form-floating">
                            <select class="form-select border-form-modal" id="resignedstatus" name="resignedstatus" aria-label="Floating label select example">
                              <option selected>Status</option>
                              <option value="resigned">Resigned</option>
                              <option value="terminated">Terminate</option>
                              <option value="end_of_contract">End Of Contract</option>
                              <option value="Awol">Awol</option>
                            </select>
                            <label for="floatingSelectGrid">Status</label>
                          </div>
                    </div>
                    <br>
            </form>
        </div>
        <div class="modal-footer" id="modal-footer">
          <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-modal-save" id="resignedsavebtn">Save</button>
        </div>
      </div>
    </div>
  </div>

