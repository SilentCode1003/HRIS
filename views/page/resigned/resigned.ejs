<!-- Table -->
<div class="card" id="tablecard">
    <div class="card-header ch-coop">
      <h3 class="title-card-table m-4">Resigned Employee</h3>
      <div class="row g-2 m-2 mb-4">
        <div class="col">
          <input id='myInput' class="pl-2 font-weight-bold" type='text' placeholder="  Search....">
        </div>
        <div class="col-sm-1 col-add">
          <button type="button" class="btn btn-add-color" data-bs-toggle="modal" data-bs-target="#resignedmodal">
            <b>+ Add</b>
          </button>
        </div>
      </div>  
    </div>
    <div class="card-body">
        <div class="table-responsive" id="table-responsive-id">
            <table class="table table-striped-light" id="dataTableresigned">
                <thead>
                    <tr>
                        <th class="col-sm-1">ID</th>
                        <th class="col-25">Name</th>
                        <th>Reason</th>
                        <th>Date Resigned</th>
                        <th>Status</th>
                        <th>Createby</th>
                        <th>Created Date</th>
                        <th class="col-sm-1">Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
