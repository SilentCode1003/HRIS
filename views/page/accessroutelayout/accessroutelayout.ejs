<div class="card">
  <div class="card-header">Access Route Layout</div>
  <div class="card-body">
    <div class="row">
      <div class="col-sm-12 col-lg-6 col-xl-6">
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">Route</span>
          <input
            id="route"
            name="route"
            type="text"
            class="form-control"
            placeholder="Route Name"
            aria-label="Route Name"
            aria-describedby="basic-addon1"
          />
        </div>
      </div>

      <div class="col-sm-12 col-lg-6 col-xl-6">
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon2">Layout</span>
          <input
            id="layout"
            name="layout"
            type="text"
            class="form-control"
            placeholder="Layout Name"
            aria-label="Layout Name"
            aria-describedby="basic-addon2"
          />
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-sm-12 col-lg-6 col-xl-6">
        <div class="input-group mb-3">
          <label class="input-group-text" for="accesstype">Access</label>
          <select class="form-select" id="accesstype">
            <option selected>--Select Access--</option>
          </select>
        </div>
      </div>
    </div>

    <div class="row justify-content-end">
      <div class="col-md-4 mt-1 text-right">
        <button
          id="addBtn"
          name="addBtn"
          class="btn btn-primary d-none d-sm-inline-block custom-btn cw-7rem shadow-sm"
          type="button"
        >
          <i class="fa fa-plus" aria-hidden="true"></i> ADD
        </button>
      </div>
    </div>
  </div>
</div>
<hr />
<div class="card">
  <div class="card-header">Access Route Layout Table</div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        id="data-table"
        class="table align-middle table-light table-sm table-bordered"
      >
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Route</th>
            <th>Layout</th>
            <th>Access</th>
            <th>Created By</th>
            <th>Created Date</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>

<!-- Modal -->
<div
  class="modal fade bd-example-modal-lg"
  id="editModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
  data-keyboard="false"
  data-backdrop="static"
>
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          Edit Access Route Layout
        </h5>
      </div>
      <div class="modal-body">
        <div class="row mb-2">
          <div class="col-lg-12">
            <div class="card-body">
              <div class="row mb-2">
                <div class="input-group mb-3">
                  <span class="input-group-text" id="basic-addon2">ID</span>
                  <input
                    id="idmodal"
                    name="idmodal"
                    type="text"
                    class="form-control"
                    placeholder="ID"
                    aria-label="ID"
                    aria-describedby="basic-addon2"
                    disabled="true"
                  />
                </div>
              </div>
              <div class="row">
                <div class="input-group mb-3">
                  <span class="input-group-text" id="basic-addon2">Route</span>
                  <input
                    id="routemodal"
                    name="routemodal"
                    type="text"
                    class="form-control"
                    placeholder="Route Name"
                    aria-label="Route Name"
                    aria-describedby="basic-addon2"
                  />
                </div>
              </div>
              <div class="row">
                <div class="input-group mb-3">
                  <span class="input-group-text" id="basic-addon2">Layout</span>
                  <input
                    id="layoutmodal"
                    name="layoutmodal"
                    type="text"
                    class="form-control"
                    placeholder="Layout Name"
                    aria-label="Layout Name"
                    aria-describedby="basic-addon2"
                  />
                </div>
              </div>
              <div class="row">
                <div class="input-group mb-3">
                  <label class="input-group-text" for="accesstypemodal"
                    >Access</label
                  >
                  <select
                    class="form-select"
                    id="accesstypemodal"
                    name="accesstypemodal"
                  >
                    <option selected>--Select Access--</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="cw-7rem clr-warning shadow-sm"
          data-bs-dismiss="modal"
        >
          <i class="fa fa-times" aria-hidden="true"></i> Close
        </button>
        <button
          type="button"
          id="saveBtn"
          class="cw-7rem clr-success shadow-sm"
        >
          <i class="fa fa-check" aria-hidden="true"></i> Save
        </button>
      </div>
    </div>
  </div>
</div>
