<div class="hrmislogin-form">

  <div class="container hrmislogin-container">
      <div class="main hrmislogin-main">
      
          <div class="content hrmislogin-content">
            <img src="/images/img/whitelogo.png" alt="Logo" class="img-fluid hrmislogin-logo">
            
              <h2>HRMIS | Log In</h2>
              <form>
                <div class="form-outline">
                  <label for="loginUrl" class="form-label">Login URL</label>
                  <select id="loginUrl" class="form-control">
                    <option selected disabled>Select Accesstype</option>
                  </select>
                </div>
                <br>
                <div class="form-outline">
                  <label class="form-label label-username" for="username">Username</label>
                  <input type="email" id="username" class="form-control fmc-ojt-login"
                    placeholder="Phone number or email address"> 
                </div>
                <div class="form-outline">
                  <div class="form-group">
                    <label for="password" class="label-password">Password</label>
                    <div class="input-group">
                      <input type="password" class="form-control" id="password">
                      <button class="btn btn-ojt-pw toggle-password" type="button">
                        <i class="fas fa-eye"></i>
                      </button>
                    </div>
                  </div>
                </div>
                  
                  <button class="btn hrmislogin-btn-login" id="loginBtn" type="submit">
                      Log In
                  </button>
              </form>
              <a href="/forgotpassword" class="text-white ">Forgot Password?</a>
          </div>
         <div class="overlay"></div>
          <div class="form-img hrmislogin-form-img">
              <!-- <img src="/images/img/hrmislogin2.png" alt=""> -->
              <div class="text-center">
                <img src="/images/img/whitelogo.png" alt="">
                <p class="hrmislogin-p">5L Solutions Supply and Allied Services Corp.</p>
              </div>
          </div>
          
      </div>
  </div>
</div>