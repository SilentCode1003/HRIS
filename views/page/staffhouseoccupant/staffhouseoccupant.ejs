      <div
        class="custom-dropdown cdw-tableoption"
        id="staffhouseDropdown"
      ></div>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-md-6">
      <div class="input-group">
        <input
          autocomplete="off"
          id="employee"
          class="form-control border-form-modal"
          placeholder="Select Staff House"
          type="text"
          name="employee"
        />
        <input
          autocomplete="off"
          type="hidden"
          id="employeeID"
          name="employeeID"
        />
        <div class="input-group-append">
          <span class="input-group-text header-bg">Select Employee</span>
        </div>
      </div>
      <div
        class="custom-dropdown cdw-tableoption"
        id="employeeDropdown"
      ></div>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-md-6">
      <div class="input-group">
        <input
          autocomplete="off"
          type="date"
          class="form-control border-form-modal"
          id="startdate"
          name="startdate"
          max=""
        />
        <div class="input-group-prepend">
          <span class="input-group-text header-bg" id="basic-addon2">Start Date:</span>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-md-6">
      <div class="input-group">
        <input
          autocomplete="off"
          type="date"
          class="form-control border-form-modal"
          id="enddate"
          name="enddate"
          max=""
        />
        <div class="input-group-prepend">
          <span class="input-group-text header-bg" id="basic-addon2">End Date:</span>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex mt-3 justify-content-end">
    <div class="flex">
      <button id="addBtn" class="btn btn-add-color"><i class="bi bi-plus mr-2"></i><b>Add</b></button>
    </div>
  </div>
</div>


 

  <div class="card-body header-bg">
    <div class="card-title">
        <h6 class="ch-text"><b>Staff House Occupant Table</b></h6>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3 m-2">
          <input
            id="search"
            type="text"
            class="form-control pl-2 font-weight-bold"
            placeholder="Search...."
          />
        </div>
      </div>
  
      <div class="row mt-2 m-2">
        <div class="table">
          <table id="data-table" class="table table-striped-light table-hover">
            <thead>
              <th>ID</th>
