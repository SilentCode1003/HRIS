              <th>Employee</th>
              <th>Duration Status</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Status</th>
              <th>Action</th>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Edit Date Modal -->
<div
class="modal fade"
id="editDateModal"
tabindex="-1"
role="dialog"
aria-labelledby="editDateModalLabel"
aria-hidden="true"
>
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header header-bg">
      <h5 class="modal-title" id="editDateModalLabel">Edit Assigned Start Date & End Date</h5>
      <button
        type="button"
        class="close staff-close"
        data-bs-dismiss="modal"
        aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body ch-body">
      <div class="form">
        <div class="row">
          <div class="col-sm-12">
            <div class="input-group">
              <input
                autocomplete="off"
                type="date"
                class="form-control border-form-modal"
                id="startdatemodal"
                name="startdatemodal"
                max=""
              />
              <div class="input-group-prepend">
                <span class="input-group-text header-bg" id="basic-addon2">New Start Date:</span>
              </div>
            </div>
          </div>
          <input type="hidden" class="form-control border-form-modal" id="id" />
        </div>

        <div class="row mt-2">
          <div class="col-sm-12">
            <div class="input-group">
              <input
                autocomplete="off"
                type="date"
                class="form-control border-form-modal"
                id="enddatemodal"
                name="enddatemodal"
                max=""
              />
              <div class="input-group-prepend">
                <span class="input-group-text header-bg" id="basic-addon2">New End Date:</span>
              </div>
            </div>
          </div>
          <input type="hidden" class="form-control border-form-modal" id="id" />
        </div>
      </div>
    </div>
    <div class="modal-footer header-bg">
      <div class="row justify-content-end">
        <button id="updateDateBtn" class="btn btn-add-color w-100">Update</button>
      </div>
    </div>
  </div>
</div>
</div>


