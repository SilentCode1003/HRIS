<div class="row">
  <div class="col-md-7 mt-4">
    <div class="card shadow mb-4 cardbody-size-710">
      <div class="progress progress-sm-mb-2">
        <div
          class="progress-bar"
          role="progressbar"
          style="width: 0%"
          aria-valuenow="0"
          aria-valuemin="0"
          aria-valuemax="100"
        ></div>
      </div>
      <div class="card-header py-3 header-bg">
        <div class="row">
          <div class="col-md-6">
            <div class="row">
              <h6 class="mt-2 ml-3 font-weight-bold h4 label-title">DTR Table</h6>
            </div>
          </div>
          <div class="col-md-6">
            <div class="input-group">
              <div class="input-group-append">
                <span class="input-group-text">Select Cut-Off</span>
              </div>
              <input
                autocomplete="off"
                class="form-control text-center custom-input"
                placeholder="Select Cut-Off"
                name="payrolldate"
                id="payrolldate"
              />
              <input
                autocomplete="off"
                type="hidden"
                id="payrolldateID"
                name="payrolldateID"
              />
            </div>
            <div
              class="custom-dropdown cdw-tableoption"
              id="payrolldateDropdown"
            ></div>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive scroll-cardbody-size-710 border">
          <table
            class="table table-bordered custom-mobile-table table-hover"
            id="datatable"
            width="100%"
            cellspacing="10"
          >
            <thead class="table-header">
              <tr>
                <th>Attendace Date</th>
                <th>Employee</th>
                <th>Ticket No.</th>
                <th>Services</th>
                <th>Remarks</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-5 mt-4">
    <div class="card shadow cardbody-size-710">
      <div class="card-header header-bg">
        <div class="row">
          <div class="col">
            <h6 class="m-0 font-weight-bold-mt-2 label-title-h4">Add DTR - Select attendace date on DTR table</h6>
          </div>
        </div>
      </div>
      <div class="card-body extend">
        <div class="row">
          <div class="col-md">
            <div class="input-group">
              <div class="input-group-append">
                <span class="input-group-text">Employee</span>
              </div>
              <input
                autocomplete="off"
                class="form-control text-center custom-input"
                placeholder="Select Employee"
                name="employeeid"
                id="employeeid"
                disabled
              />
            </div>
          </div>
          <div class="col-md">
            <div class="input-group">
              <div class="input-group-append">
                <span class="input-group-text">Date</span>
              </div>
              <input
                autocomplete="off"
                class="form-control text-center custom-input"
                placeholder="Select Cut-Off"
                name="attendancedate"
                id="attendancedate"
                disabled
              />
            </div>
          </div>
        </div>
        <div class="row mt-2">
          <div class="col-md">
            <textarea
              name="ticket"
              id="ticket"
              class="form-control"
              placeholder="Add tickets"
            ></textarea>
          </div>
        </div>
        <div class="row mt-2">
          <div class="col-md">
            <textarea
              name="service"
              id="service"
              class="form-control"
              placeholder="Add services"
            ></textarea>
          </div>
        </div>
        <div class="row mt-2">
          <div class="col-md">
            <textarea
              name="remark"
              id="remark"
              class="form-control"
              placeholder="Add remarks"
            ></textarea>
          </div>
        </div>
        <div class="row justify-content-end mt-4">
          <div class="col-12 text-right">
            <button
              type="button"
              id="submitBtn"
              class="btn btn-outline-inventory w-100"
            >
              Submit
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
