<div class="card">
  <div class="card-header header-bg">
    <h3 class="card-title ch-text">Staff House</h3>
    <div class="card">
      <div class="card-body ch-body">
        <div class="form">
          <div class="row align-items-center">
            <div class="col-sm-12 col-md-4 col-lg-4">
              <input
                type="text"
                class="form-control border-form-modal"
                id="name"
                placeholder="Alias or Name e.g. Polo Drive"
              />
            </div>

            
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-sm-12 col-md-4 col-lg-4">
              <input
                type="text"
                class="form-control strong border-form-modal"
                id="tel"
                placeholder="Contact Number e.g. 0926-262-8210"
              />
          </div>
          <div class="row mt-2">
            <div class="col-sm-12">
              <textarea
                name="address"
                id="address"
                class="form-control border-form-modal"
                placeholder="Address e.g. 39 Macaria Ave, Pacita 1, Brgy. San Francisco, Biñan, Laguna, 4024"
              ></textarea>
            </div>
          </div>

          <div class="d-flex mt-4 justify-content-end">
            <div class="flex">
              <button id="addBtn" class="btn btn-add-color"><i class="bi bi-plus mr-2"></i><b>Add</b></button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card-body header-bg">
    <div class="card-title">
      <h6 class="ch-text"><b>Staff House Table</b></h6>
    </div>
    <div class="row">
      <div class="col-md-6 mb-3 m-2">
        <input
          id="search"
          type="text"
          class="form-control pl-2 font-weight-bold"
          placeholder="Search...."
        />
      </div>
    </div>

    <div class="row mt-2 m-2">
      <div class="table">
        <table id="data-table" class="table table-bordered table-hover">
          <thead>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Tel No.</th>
            <th>Status</th>
            <th>Action</th>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- Edit Modal -->
<div
  class="modal fade"
  id="editModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="editModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header header-bg">
        <h5 class="modal-title" id="editModalLabel">Edit Staff House</h5>
        <button
          type="button"
          class="close staff-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body ch-body">
        <div class="form">
          <div class="row">
            <div class="col-sm-12">
              <input
                type="text"
                class="form-control border-form-modal"
                id="namemodal"
                placeholder="Alias or Name e.g. Polo Drive"
              />
            </div>
            <input type="hidden" class="form-control" id="id" />
          </div>
          <div class="row mt-2">
            <div class="col-sm-12">
              <input
                type="text"
                class="form-control strong border-form-modal"
                id="telmodal"
                placeholder="Contact Number e.g. 0926-262-8210"
              />
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-sm-12">
              <textarea
                name="address"
                id="addressmodal"
                class="form-control border-form-modal"
                placeholder="Address e.g. 39 Macaria Ave, Pacita 1, Brgy. San Francisco, Biñan, Laguna, 4024"
              ></textarea>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer header-bg">
        <div class="row justify-content-end">
          <button id="updateBtn" class="btn btn-add-color w-100"><b>Update</b></button>
        </div>
      </div>
    </div>
  </div>
</div>
