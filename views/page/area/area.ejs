<div class="card">
  <div class="card-footer">
    <div class="row card-header">
      <h3 class="card-title mb-0 font-weight-bold">Area</h3>
    </div>
    <div class="row mb-2 mt-2">
      <div class="col-md-6">
        <div class="input-group">
          <input
            autocomplete="off"
            id="area"
            class="form-control"
            placeholder="Input Area Name"
            type="text"
            name="area"
          />
          <div class="input-group-append">
            <span class="input-group-text">Area</span>
          </div>
        </div>
      </div>
    </div>

    <div class="row-mt-2">
      <div class="col-md-6 justify-content-center">
        <button id="addBtn" name="addBtn" class="btn btn-add-color w-25">
          Add
        </button>
      </div>
    </div>
    <div class="card-body">
      <div class="card-title">
        <h6 class="m-0 font-weight-bold">Area Table</h6>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <input
            id="search"
            type="text"
            class="form-control"
            placeholder="Search"
          />
        </div>
      </div>
      <div class="row">
        <div class="table-responsive">
            <table id="data-table" class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <th>ID</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Action</th>
                </thead>
                <tbody></tbody>
            </table>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- Edit Staffhouse Modal -->
<div
class="modal fade"
id="editModal"
tabindex="-1"
role="dialog"
aria-labelledby="editModalLabel"
aria-hidden="true"
>
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="editModalLabel">Edit Assigned Staff House</h5>
      <button
        type="button"
        class="close"
        data-bs-dismiss="modal"
        aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="form">
        <div class="row">
          <div class="col-sm-12">
            <div class="input-group">
              <input
                autocomplete="off"
                id="namemodal"
                class="form-control"
                placeholder="Select Staff House"
                type="text"
                name="namemodal"
              />
              <div class="input-group-append">
                <span class="input-group-text">Select New Staff House</span>
              </div>
            </div>
            <div class="custom-dropdown cdw-tableoption" id="namemodalDropdown"></div>
          </div>
        </div>
    </div>
    </div>
    <div class="modal-footer">
      <div class="row justify-content-end">
        <button id="updateBtn" class="btn btn-add-color w-100">Update</button>
      </div>
    </div>
  </div>
</div>

