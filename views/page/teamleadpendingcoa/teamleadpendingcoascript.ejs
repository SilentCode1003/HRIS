            });

            return finalData;
          },
        },
        columnDefs: [
          {
            targets: 1,
            className: "td-indent",
          },
        ],
        columns: [
          { data: "image" },
          { data: "requestid" },
          { data: "employeeid" },
          { data: "attendancedate" },
          { data: "timein" },
          { data: "timeout" },
          { data: "total" },
          { data: "createdate" },
          { data: "requeststatus" },
          { data: "action" },
        ],
        createdRow: function (row, data, dataIndex) {
          //miyaka
          var requeststatusCell = $(row).find("td:eq(8)");

          var requeststatusText = data.requeststatus;

          var requeststatusClass = "";

          switch (requeststatusText.toLowerCase()) {
            case "approved":
              requeststatusClass = "approved-status";
              break;
            case "cancel":
              requeststatusClass = "cancel-status";
              break;
            case "pending":
              requeststatusClass = "pending-status";
              break;
            default:
              requeststatusClass = "";
          }

          requeststatusCell.html(
            `<span class="${requeststatusClass}">${requeststatusText}</span>`
          );
          $("td", row).each(function (index) {
            this.style.textAlign = "center";
            this.style.verticalAlign = "middle";
          });
        },
        initComplete: function () {},
      });
    }

