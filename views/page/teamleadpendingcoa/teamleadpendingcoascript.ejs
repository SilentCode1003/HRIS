              imgElement.style.height = "90px";

              finalData.push({
                image: imgElement.outerHTML,
                requestid: item.requestid,
                employeeid: item.employeeid,
                attendancedate: item.attendancedate,
                timein: item.timein,
                timeout: item.timeout,
                total: item.total,
