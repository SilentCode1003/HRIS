<div class="toggle-view">
    <div class="row mb-2">
      <div class="col-lg-12">
        <div class="card card-size2">
          <div class="card-header py-3 header-bg">
            <h6 class="m-0 font-weight-bold">Suggestion Question</h6>
          </div>
          <div class="card-body extend body-color">
            <div class="row mb-2">
              <div class="col-md-6 mmb">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon2"
                      >Question</span
                    >
                  </div>
                  <textarea
                    autocomplete="off"
                    id="question"
                    name="question"
                    type="text"
                    rows="10"
                    class="form-control"
                    placeholder="Enter Question"
                    aria-label="question"
                    aria-describedby="basic-addon1"></textarea>
                  
                </div>
              </div>
            </div>
            <div class="row d-flex justify-content-end">
              <div class="col-md-2 align mt-2">
                <button
                  id="addBtn"
                  name="addBtn"
                  class="btn btn-sm btn-outline-inventory w-100"
                >
                  <span id="btnIcon"
                    ><i class="fa fa-plus" aria-hidden="true"></i> Add</span
                  >
                  <span
                    id="btnSpinner"
                    class="spinner-border spinner-border-sm d-none"
                    role="status"
                    aria-hidden="true"
                  ></span>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="card mb-4 card-body-size-710 card-size">
    <div class="progress progress-sm mb-2">
      <div
        class="progress-bar"
        role="progressbar"
        style="width: 0%"
        aria-valuenow="0"
        aria-valuemin="0"
        aria-valuemax="100"
      ></div>
    </div>
    <div class="card-header py-2 header-bg">
      <div class="row">
        <div class="col-md-4 d-flex mb-2">
          <button
            id="toggleButton"
            name="toggleButton"
            class="btn btn-circle btn-outline-inventory"
          >
            <i class="fas fa-plus"></i>
          </button>
          <h6 class="mt-2 ml-3 font-weight-bold table-title">Suggestion Question</h6>
        </div>
        <div class="col md-8">
          <div class="input-group">
            <input
              autocomplete="off"
              type="text"
              class="form-control bg-light small"
              placeholder="Search for..."
              aria-label="Search"
              aria-describedby="basic-addon2"
              id="search-input"
            />
            <div class="input-group-append">
              <button class="btn sis-btn-color" type="button" id="search-button">
                <i class="fas fa-search fa-sm"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="card-body body-color">
      <div class="table-responsive scroll-cardbody-size-710 border">
        <table
          class="table custom-mobile-table"
          id="dataTable"
          width="100%"
          cellspacing="10"
        >
          <thead class="table-header">
            <tr>
              <th class="text-left">ID</th>
              <th class="text-left">Question</th>
              <th class="text-left">Created by</th>
              <th class="text-left">Created Date</th>
              <th class="col-1">Status</th>
              <th class="col-1"></th>
            </tr>
          </thead>
  
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>
  
  <!-- Modal -->
  <div
    class="modal fade"
    id="Modal"
    tabindex="-1"
    data-backdrop="static"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header custom-bg">
          <h6 class="font-weight-bold h4 label-title">Suggestion Question</h6>
          <button
            type="button"
            class="close"
            data-bs-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="custom-modal-body">
          <div class="card">
            <div class="card-header py-2 header-bg">
              <h6 class="pt-2 font-weight-bold h4 label-title">
                Update Suggestion Question
              </h6>
            </div>
            <div class="card-body">
              <div class="row mb-2 mt-2">
                <div class="col-md-6">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon2">ID</span>
                    </div>
                    <input
                      autocomplete="off"
                      id="questionidmodal"
                      name="questionidmodal"
                      type="text"
                      class="form-control"
                      aria-label="fullname"
                      aria-describedby="basic-addon1"
                      readonly
                    />
                  </div>
                </div>
                <div class="col-md-6 ">
                  <div class="input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon2">Current Question</span>
                      </div>
                      <textarea
                        autocomplete="off"
                        id="currentquestion"
                        name="currentquestion"
                        type="text"
                        rows="10"
                        class="form-control"
                        aria-label="fullname"
                        aria-describedby="basic-addon1"
                        readonly></textarea>
                  
                    </div>
              </div>
              <div class="row mt-2 justify-content-center">
                <div class="col-md-6 ">
                  <div class="input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon2">New Question</span>
                      </div>
                      <textarea
                        autocomplete="off"
                        id="questionmodal"
                        name="questionmodal"
                        type="text"
                        rows="10"
                        class="form-control"
                        aria-label="fullname"
                        aria-describedby="basic-addon1"
                        placeholder="Enter New Area Name"></textarea>
                      
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-outline-inventory"
            id="closeBtn"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button type="button" id="updateBtn" class="btn btn-outline-inventory">
            <span id="btn-label-modal">Update</span>
            <span
              id="btnSpinner-modal"
              class="spinner-border spinner-border-sm d-none"
              role="status"
              aria-hidden="true"
            ></span>
          </button>
        </div>
      </div>
    </div>
  </div>
  