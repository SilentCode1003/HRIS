<div class="modal fade" id="holidayapprovalmodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
      <div class="modal-content">
          <div class="modal-header" id="modal-header">
              <h3 class="modal-title fs-5" id="exampleModalLabel">Approve This Holiday</h3>
              <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
            </div>
            <div class="modal-body" id="modal-body">
              <br>
              <br>
              <div class="row">
                <div class="col-xl-2 col-lg-4" style="margin-left: 10px;">
                  <div class="col g-6">
                    <div class="p-4" style="width: 300px; margin-top: -100px;">
                      <div class="text-center">
                        <img id="preview" src="https://via.placeholder.com/250" class="border border-5 border-form-modal" alt="placeholder">
                      </div>
                      <br>
                      <h2 class="pb-3 mb-4 text-center modal-content-title">File  Preview</h2>
                    </div>
                  </div>
                </div>
                <div class="col-xl-8 col-lg-7" style="margin-left: 150px;">
                  <form>
                    <br>
                    <div class="row g-3">
                      <div class="col">
                        <div class="form-floating">
                          <input type="text" class="form-control border-form-modal" id="holidayfullname" name="holidayfullname" disabled>
                          <label for="floatingInput">Full Name</label>
                        </div>
                      </div>
                      <div class="col">
                          <div class="form-floating">
                            <input type="text" class="form-control border-form-modal" id="holidayattendancedate" name="holidayattendancedate" disabled>
                            <label for="floatingInput">Attendace Date</label>
                          </div>
                      </div>  
                    </div>                             
                    <br>
                    <div class="row g-3">
                      <div class="col">
                          <div class="form-floating">
                            <input type="datetime-local" class="form-control border-form-modal" id="holidayclockin" name="holidayclockin" disabled
                            placeholder="Address">
                            <label for="floatingInput">Clock In</label>
                          </div>
                      </div>
                      <div class="col">
                          <div class="form-floating">
                            <input type="datetime-local" class="form-control border-form-modal" id="holidayclockout" name="holidayclockout" disabled
                            placeholder="Address">
                            <label for="floatingInput">Clock Out</label>
                          </div>
                      </div>
                      <div class="col">
                          <div class="form-floating">
                            <input type="number" class="form-control border-form-modal" id="holodaytotalhours" name="holodaytotalhours" disabled>
                            <label for="floatingInput">Total Overtime</label>
                          </div>
                        </div>
                    </div>
                    <br>
                    <div class="row g-3">
                      <div class="col">
                        <div class="form-floating">
                          <input type="date" class="form-control border-form-modal" id="holidaydate" name="holidaydate" disabled>
                          <label for="floatingInput">Holiday Date</label>
                        </div>
                      </div>
                      <div class="col">
                        <div class="form-floating">
                          <input type="text" class="form-control border-form-modal" id="holidayname" name="holidayname" disabled>
                          <label for="floatingInput">Holiday Name</label>
                        </div>
                      </div>
                      <div class="col">
                        <div class="form-floating">
                          <input type="text" class="form-control border-form-modal" id="holidaytype" name="holidaytype" disabled>
                          <label for="holidaytype">Holiday Type</label>
                        </div>
                      </div>
                    </div>
                    <br>
                    <div class="row g-3">
                      <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control border-form-modal" id="holidaypayrolldate" name="holidaypayrolldate" disabled>
                            <label for="holidaypayrolldate">Payroll Date</label>
                        </div>
                      </div>
                      <div class="col">
                        <div class="form-floating">
                          <select class="form-select border-form-modal" id="holidaystatus" name="holidaystatus" disabled
                          aria-label="Floating label select example">
                          <option value="Pending" disabled>Pending</option>
                          <option value="Applied" disabled>Applied</option>
                          <option value="Approved">Approved</option>
                          <option value="Rejected">Rejected</option>
                        </select>
                          <label for="floatingInput">Status</label>
                      </div>                    
                    </div>
                    </div>
                  <br>
                  <div class="row g-3">
                      <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control border-form-modal" id="holidayappeovedby" name="holidayappeovedby" disabled>
                            <label for="holidayappeovedby">Approved By</label>
                          </div>
                      </div>
                      <div class="col">
                          <div class="form-floating">
                            <textarea type="text" class="form-control border-form-modal" id="holidaycomment" name="holidaycomment"
                              placeholder="Comment" disabled></textarea>
                            <label for="floatingInput">Comment</label>
                          </div>
                        </div>
                      </div>
                    <br>
                  </form>
                </div>
              </div>
            </div>
            <div class="modal-footer" id="modal-footer">
              <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-modal-save" id="holidaysavebtn">Save</button>
          </div>
      </div>
  </div>
</div>
