<!-- Table -->
<div class="card" id="tablecard">
    <div class="card-header ch-coop">
      <h3 class="title-card-table">Disciplinary Action</h3>
      <div class="row g-2">
        <div class="col">
          <input id='myInput' type='text' placeholder="  Search....">
        </div>
        <div class="col-sm-1 col-add">
          <button type="button" class="btn btn-add-color" data-bs-toggle="modal" data-bs-target="#disciplinaryactionmodal">
            <b>+ Add</b>
          </button>
        </div>
      </div>
    </div>
    <div class="card-body">
        <div class="table-responsive" id="table-responsive-id">
            <table class="table table-light table-bordered" id="dataTabledisciplinaryaction">
                <thead>
                    <tr>
                        <th class="col-sm-1">ID</th>
                        <th class="col-sm-1">Action Code</th>
                        <th>Offense ID</th>
                        <th class="col-25">Description</th>
                        <th>Created By</th>
                        <th>Created Date</th>
                        <th>Status</th>
                        <th class="col-sm-1">Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="disciplinaryactionmodal" data-bs-backdrop="static" tabindex="-1"
  aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" id="modal-header">
        <lord-icon src="https://cdn.lordicon.com/pdsourfn.json" stroke="bold"
        colors="primary:#9cf4a7,secondary:#109121,tertiary:#ebfad1" class="db-hrmis"></lord-icon>
        <h1 class="modal-title" id="exampleModalLabel">Add Disciplinary Action</h1>
        <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
      </div>
      <div class="modal-body" id="modal-body">
        <form>
          <div class="col">
            <div class="form-floating">
              <input class="form-select border-form-modal" id="disciplinaryactionactioncode" name="disciplinaryactionactioncode"
                aria-label="Floating label select example">
              <label for="floatingSelectGrid">Action Code</label>
            </div>
          </div>
          <br>
          <div class="col">
            <div class="form-floating">
              <select class="form-select border-form-modal" id="disciplinaryactionoffenseid" name="disciplinaryactionoffenseid"
                aria-label="Floating label select example">
                <option selected>Offense ID</option>
              </select>
              <label for="floatingSelectGrid">Offense ID</label>
            </div>
          </div>
          <br>
          <div class="col">
            <div class="form-floating">
              <input type="text" class="form-control border-form-modal" id="disciplinaryactiondescription"
                name="disciplinaryactiondescription" placeholder="Created By">
              <label for="floatingInput">Description</label>
            </div>
          </div>
          <br>
        </form>
      </div>
      <div class="modal-footer" id="modal-footer">
        <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-modal-save" id="disciplinaryactionsavebtn">Save</button>
      </div>
    </div>
  </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editdisciplinaryactionmodal" tabindex="-1" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" id="modal-header">
        <lord-icon src="https://cdn.lordicon.com/lsrcesku.json" stroke="bold"
          colors="primary:#242424,secondary:#e8e230,tertiary:#e83a30,quaternary:#d1f3fa" class="db-hrmis">
        </lord-icon>
        <h1 class="modal-title" id="exampleModalLabel">Edit Disciplinary Action</h1>
        <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
      </div>
      <div class="modal-body" id="modal-body">
        <form>
          <div class="col">
            <div class="form-floating">
              <input class="form-select border-form-modal" id="editdisciplinaryactionactioncode" name="editdisciplinaryactionactioncode"
                aria-label="Floating label select example">
              <label for="floatingSelectGrid">Action Code</label>
            </div>
          </div>
          <br>
          <div class="col">
            <div class="form-floating">
              <select class="form-select border-form-modal" id="editdisciplinaryactionoffenseid" name="editdisciplinaryactionoffenseid"
                aria-label="Floating label select example">
                <option selected>Offense ID</option>
              </select>
              <label for="floatingSelectGrid">Offense ID</label>
            </div>
          </div>
          <br>
          <div class="col">
            <div class="form-floating">
              <input type="text" class="form-control border-form-modal" id="editdisciplinaryactiondescription"
                name="editdisciplinaryactiondescription" placeholder="Created By">
              <label for="floatingInput">Description</label>
            </div>
          </div>
          <br>
          <div class="col">
            <div class="form-floating">
              <select class="form-select border-form-modal" id="editdisciplinaryactionstatus" name="editdisciplinaryactionstatus"
