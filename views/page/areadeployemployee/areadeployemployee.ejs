<div class="card">
  <div class="card-body">
    <div class="card-header">
      <h3 class="card-title mb-0 font-weight-bold">Area Deploy Employee</h3>
    </div>
    <div class="row mb-2 mt-2">
      <div class="col-md-6">
        <div class="input-group">
          <input
            autocomplete="off"
            id="area"
            class="form-control"
            placeholder="Select Staff House"
            type="text"
            name="area"
          />
          <input autocomplete="off" type="hidden" id="areaID" name="areaID" />
          <div class="input-group-append">
            <span class="input-group-text">Select Area</span>
          </div>
        </div>
        <div class="custom-dropdown cdw-tableoption" id="areaDropdown"></div>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-md-6">
        <div class="input-group">
          <input
            autocomplete="off"
            id="employee"
            class="form-control"
            placeholder="Select Staff House"
            type="text"
            name="employee"
          />
          <input
            autocomplete="off"
            type="hidden"
            id="employeeID"
            name="employeeID"
          />
          <div class="input-group-append">
            <span class="input-group-text">Select Employee</span>
          </div>
        </div>
        <div
          class="custom-dropdown cdw-tableoption"
          id="employeeDropdown"
        ></div>
      </div>
    </div>

    <div class="row mt-3 justify-content-start">
      <div class="col-md-6">
        <button id="addBtn" class="btn btn-add-color w-25">Add</button>
      </div>
    </div>
  </div>

  <div class="card-body">
    <div class="card-title">
      <h6 class="m-0 font-weight-bold">Area Deploy Employee Table</h6>
    </div>
    <div class="row">
      <div class="col-md-6 mb-3">
        <input
          id="search"
          type="text"
          class="form-control"
          placeholder="Search"
        />
      </div>
    </div>

    <div class="row mt-2">
      <div class="table-responsive">
        <table id="data-table" class="table table-bordered table-hover">
          <thead class="thead-dark">
            <th>ID</th>
            <th>Area</th>
            <th>Employee</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>
