 <!-- Modal -->
 <div class="modal fade" id="holidaymemodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
      <div class="modal-content">
          <div class="modal-header" id="modal-header">
              <h3 class="modal-title fs-5" id="exampleModalLabel">Applied Holiday ?</h3>
              <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
            </div>
            <div class="modal-body" id="modal-body">
              <br>
              <br>
              <div class="row">
                <div class="col-xl-2 col-lg-4" style="margin-left: 10px;">
                  <div class="col g-6">
                      <div class="p-4" style="width: 300px; margin-top: -100px;">
                      <div class="text-center">
                          <img id="previewleave" src="https://via.placeholder.com/250" class="border border-5 border-form-modal" alt="placeholder">
                      </div>
                      <br>
                      <div class="col">
                          <div class="col g-6">
                          <input type="file" name="edituploadimage" id="edituploadimage"
                              class="form-control border-form-modal" accept="image/*">
                          </div>
                      </div>
                      <h2 class="pb-3 mb-4 text-center modal-content-title">File  Preview</h2>
                      </div>
                  </div>
                </div>
                <div class="col-xl-8 col-lg-7" style="margin-left: 150px;">
                  <form>
                    <br>
                    <div class="row g-3">
                      <div class="col">
                          <div class="form-floating">
                            <input type="datetime-local" class="form-control border-form-modal" id="holidaytimein" name="holidaytimein"
                            placeholder="Address">
                            <label for="floatingInput">Clock In</label>
                          </div>
                      </div>
                      <div class="col">
                          <div class="form-floating">
                            <input type="datetime-local" class="form-control border-form-modal" id="holidaytimeout" name="holidaytimeout"
                            placeholder="Address">
                            <label for="floatingInput">Clock Out</label>
                          </div>
                      </div>
                    </div>
                    <br>
                    <div class="row g-3">
                      <div class="col">
                          <div class="form-floating">
                            <input type="date" class="form-control border-form-modal" id="holidayattendancedate" name="holidayattendancedate">
                            <label for="floatingInput">Attendance Date</label>
                          </div>
                      </div>
                      <div class="col">
                        <div class="form-floating">
                          <input type="text" class="form-control border-form-modal" id="holidayname" name="holidayname"
                            placeholder="Holiday Name" readonly>
                         <label for="floatingInput">Holiday Name</label>
                       </div>
                      </div>
                    </div>
                    <br>
                    <div class="row g-3">
                      <div class="col">
                        <div class="form-floating">
                          <input type="text" class="form-control border-form-modal" id="holidaytype" name="holidaytype"
                            placeholder="Holiday Type" readonly>
                          <label for="floatingInput">Holiday Type</label>
                        </div>
                      </div>
                      <div class="col">
                          <div class="form-floating">
                              <select class="form-select border-form-modal" id="holidaypayrolldate" name="holidaypayrolldate"
                                aria-label="Floating label select example">
                             </select>
                             <label for="floatingInput">Pyroll Date</label>
                          </div>
                      </div>
                    </div>
                    <br>
                    <div class="row g-3">
                      <div class="col">
                        <div class="form-floating">
                          <input type="text" class="form-control border-form-modal" id="holidaydate" name="holidaydate"
                            placeholder="Holiday Date" readonly>
                          <label for="floatingInput">Holiday Date</label>
                        </div>
                      </div>
                      <div class="col">
                        <div class="form-floating">
                            <select class="form-select border-form-modal" id="holidaysubgroup" name="holidaysubgroup"
                              aria-label="Floating label select example">
                           </select>
                           <label for="floatingInput">Sub Group</label>
                        </div>
                      </div>
                      <div class="col">
                        <div class="form-floating">
                          <select class="form-select border-form-modal" id="holidaystatus" name="holidaystatus"
                          aria-label="Floating label select example">
                          <option value="Applied">Applied</option>
                          <option value="Pending">Pending</option>
                          <option value="Cancelled">Cancelled</option>
                        </select>
                          <label for="floatingInput">Status</label>
                      </div>                    
                    </div>
                    </div>
                  <br>
                  </form>
                </div>
              </div>
            </div>
