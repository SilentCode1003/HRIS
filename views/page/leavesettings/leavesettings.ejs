<!-- Table -->
<div class="card" id="tablecard">
    <div class="card-header ch-coop">
      <h3 class="title-card-table">Leave Settings</h3>
      <div class="row g-3">
        <div class="col">
          <input id='myInput'  type='text' placeholder="  Search....">
        </div>
        <div class="col-sm-2">
          <button type="button" class="btn btn-add-color" data-bs-toggle="modal" data-bs-target="#addleavesettingsmodalperemployee">
            <b>+ Add Per Employee</b>
          </button>
        </div>
          <div class="col-sm-2">
            <button type="button" class="btn btn-add-color" data-bs-toggle="modal" data-bs-target="#addleavesettingsmodal">
              <b>+ Add To All</b>
            </button>
          </div>
        
      </div>
    </div>
    <div class="card-body">
        <div class="table-responsive"  id="table-responsive-id">
            <table class="table table-light table-bordered" id="dataTableLeaveSettings">
                <thead>
                    <tr>
                        <th class="col-sm-1">ID</th>
                        <th>Employee</th>
                        <th>Tenure</th>
                        <th>Leave Type</th>
                        <th>Leave Year</th>
                        <th>Total Leave Days</th>
                        <th>Unused Leave</th>
                        <th>Used Leave</th>
                        <th>Status</th>
                        <th class="col-sm-1">Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
  </div>
</div>

<!-- Modal To All -->
<div class="modal fade" id="addleavesettingsmodal" data-bs-backdrop="static" tabindex="-1"
  aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" id="modal-header">
        <lord-icon src="https://cdn.lordicon.com/pdsourfn.json" stroke="bold"
        colors="primary:#9cf4a7,secondary:#109121,tertiary:#ebfad1" class="db-hrmis"></lord-icon>
        <h1 class="modal-title" id="exampleModalLabel">Add Another type of Leave ?</h1>
        <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
      </div>
      <div class="modal-body" id="modal-body">
        <form>
          <div class="col">
            <div class="form-floating">
              <select type="text" class="form-control border-form-modal" id="leavetypename" name="leavetypename">
                <option selected disabled>Choose Type of Leave</option>
                <option value="Service Incentive Leave">Service Incentive Leave</option>
                <option value="Maternity Leave">Maternity Leave</option>
                <option value="Paternity Leave ">Paternity Leave </option>
                <option value="Victims of Violence Against Women and Their Children (VAWC) Leave">Victims of Violence Against Women and Their Children (VAWC) Leave</option>
                <option value="Parental Leave for Solo Parents">Parental Leave for Solo Parents</option>
                <option value="Special Leave Benefits for Women">Special Leave Benefits for Women</option>
              </select>
              <label for="floatingInput">Leave Type</label>
            </div>
          </div>
          <br>
          <div class="col">
            <div class="form-floating">
                <select type="text" class="form-control border-form-modal" id="yearleave" name="yearleave" placeholder="Year Leave">
                    <option selected disabled>Year Leave</option>
                </select>
                <label for="yearleave">Year Leave</label>
            </div>
          </div>          
          <br>
          <div class="col">
            <div class="form-floating">
                <input type="number" class="form-control border-form-modal" id="numberofdays" name="numberofdays" placeholder="Number Of Leave Days">
                <label for="numberofdays">Number Of Starting Days Leave</label>
            </div>
          </div>        
        </form>
      </div>
      <div class="modal-footer" id="modal-footer">
        <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-modal-save" id="leavesavebtn">Save</button>
      </div>
    </div>
  </div>
</div>

