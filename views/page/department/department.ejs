<br>

<!-- Table -->
<div class="card" id="tablecard">
    <div class="card-header ch-coop">
      <h3 class="title-card-table">Department</h3>
      <div class="row g-2">
        <div class="col">
          <input id='myInput' type='text' placeholder="  Search....">
        </div>
        <div class="col-sm-1 col-add">
          <button type="button" class="btn btn-add-color" data-bs-toggle="modal" data-bs-target="#departmentmodal">
            <b>+ Add</b>
          </button>
        </div>
      </div> 
    </div>
    <div class="card-body">
        <div class="table-responsive"  id="table-responsive-id">
            <table class="table table-light table-bordered" id="dataTabledepartment">
                <thead>
                    <tr>
                        <th class="col-sm-1">ID</th>
                        <th>Department Name</th>
                        <th>Department Head</th>
                        <th>Created By</th>
                        <th>Create Date</th>
                        <th>Status</th>
                        <th class="col-sm-1">Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="departmentmodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header" id="modal-header">
          <lord-icon src="https://cdn.lordicon.com/pdsourfn.json" stroke="bold"
        colors="primary:#9cf4a7,secondary:#109121,tertiary:#ebfad1" class="db-hrmis"></lord-icon>
          <h3 class="modal-title" id="exampleModalLabel">Add DEPARTMENT</h3>
          <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
        </div>
        <div class="modal-body" id="modal-body">
            <form>
                    <div class="row g-3">
                      <div class="col">
                        <div class="form-floating">
                        <input type="text" class="form-control border-form-modal" id="departmentname" name="departmentname" placeholder="Department Name">
                        <label for="floatingInput">Department Name</label>
                        </div>
                    </div>
                    <br>
                    </div>
                    <br>
                    <div class="row g-3">
                      <div class="col">
                        <div class="form-floating">
                            <select class="form-select border-form-modal" id="departhead" name="departhead" aria-label="Floating label select example">
                            </select>
                            <label for="floatingSelectGrid">Department Head</label>
                          </div>
                    </div>
                    </div>
                    <br>
                    <div class="form-floating">
                      <label class="form-label" for="EditFile"></label>
                      <input type="file" name="addicon" id="addicon" class="form-control border-form-modal"
                        accept="image/*">
                    </div>
                    <div class="text-center">
                      <img id="preview" src="https://via.placeholder.com/250" style="width: 250px;; height: 250px;"
                        class="rounded border-form-modal" alt="placeholder">
                    </div>
                  <br>
            </form>
        </div>
        <div class="modal-footer" id="modal-footer">
          <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-modal-save" id="departmentsavebtn">Save</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Edit Modal -->
<div class="modal fade" id="editdepartmentmodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header" id="modal-header">
          <lord-icon src="https://cdn.lordicon.com/lsrcesku.json" stroke="bold"
          colors="primary:#242424,secondary:#e8e230,tertiary:#e83a30,quaternary:#d1f3fa" class="db-hrmis">
        </lord-icon>
          <h1 class="modal-title" id="exampleModalLabel">Edit Department</h1>
          <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
        </div>
        <div class="modal-body" id="modal-body">
            <form>
              <div class="row g-3">
                <div class="col">
                  <div class="form-floating">
                  <input type="text" class="form-control border-form-modal" id="editdepartmentname" name="editdepartmentname" placeholder="Department Name">
                  <label for="floatingInput">Department Name</label>
                  </div>
              </div>
              <br>
              </div>
              <br>
              <div class="row g-3">
                <div class="col">
                  <div class="form-floating">
                      <select class="form-select border-form-modal" id="editdepartmenthead" name="editdepartmenthead" aria-label="Floating label select example">
                      </select>
                      <label for="floatingSelectGrid">Department Head</label>
                    </div>
                </div>
                <br>
                <div class="col">
                  <div class="form-floating">
                      <select class="form-select border-form-modal" id="editdepartmentstatus" name="editdepartmentstatus" aria-label="Floating label select example">
                        <option>Status</option>
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                      </select>
                      <label for="floatingSelectGrid">Department</label>
                    </div>
                </div>
              </div>
              <br>
              <div class="form-floating">
                <label class="form-label" for="EditFile"></label>
                <input type="file" name="editicon" id="editicon" class="form-control border-form-modal"
                  accept="image/*">
              </div>
              <div class="text-center">
                <img id="editpreview" src="https://via.placeholder.com/250" style="width: 250px;; height: 250px;"
                  class="rounded border-form-modal" alt="placeholder">
              </div>
             <br>
            </form>
        </div>
        <div class="modal-footer" id="modal-footer">
          <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-modal-save" id="editdepartmentsavebtn">Save</button>
        </div>
      </div>
    </div>
  </div>