<br>

<!-- Table -->
<div class="card" id="tablecard">
    <div class="card-header ch-coop">
        <h3 class="title-card-table m-4">Candidate for Regularization</h3>
      <!-- <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#departmentmodal">
        + Add New
      </button> -->
      <input id='myInput' class="m-4 pl-2 font-weight-bold"  type='text' placeholder="  Search....">
    </div>
    <div class="card-body">
        <div class="table-responsive"  id="table-responsive-id">
            <table class="table table-light table-bordered" id="dataTablecandidate">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Employee ID</th>
                        <th class="col-25">Employee Name</th>
                        <th>Department</th>
                        <th>Hire Date</th>
                        <th>Tenure</th>
                        <th>Status</th>
                        <th class="col-sm-1">Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="candidatemodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header" id="modal-header">
            <lord-icon src="https://cdn.lordicon.com/lsrcesku.json" stroke="bold"
                colors="primary:#242424,secondary:#e8e230,tertiary:#e83a30,quaternary:#d1f3fa" class="db-hrmis">
            </lord-icon>
            <h1 class="modal-title" id="exampleModalLabel">Are you sure you want to Regular this Employee?</h1>
            <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
        </div>
        <div class="modal-body" id="modal-body">
            <form>
                <div class="card">
                    <div class="card-body candidate-prof">
                        <form>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label for="candidatefullname" class="cor-label">Name</label>
                                        <input type="text" class="form-control border-form-modal" id="candidatefullname" placeholder="Employee Name" disabled>
                                    </div>
                                    <div class="form-group">
                                        <label for="candidatetenure" class="cor-label">Tenure</label>
                                        <input type="text" class="form-control border-form-modal" id="candidatetenure" placeholder="Tenure" disabled>
                                    </div>
                                    <div class="form-group">
                                        <label for="candidatehiredate" class="cor-label">Hire Date</label>
                                        <input type="text" class="form-control border-form-modal" id="candidatehiredate" placeholder="Hire Date" disabled>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputState">Action</label>
                                        <select id="inputState" class="form-control border-form-modal">
                                            <option>Choose...</option>
                                            <option value="regular">Approve Regularization</option>
                                            <option value="end_of_contract">End of Contract</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-center">
                                        <img id="editpreview" style="  width: 200px;
                                        height: 200px;" class="rounded rounded-circle border-form-modal"
                                         alt="placeholder" disabled>
                                    </div>
                                    <br>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer" id="modal-footer">
          <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-modal-save" id="saveregular">Save</button>
        </div>
      </div>
    </div>
  </div>

