                            <option value="Applied">Applied</option>
                            <option value="Pending">Pending</option>
                            <option value="Cancelled">Cancelled</option>
                          </select>
                            <label for="floatingInput">Status</label>
                        </div>                    
                      </div>
                      </div>
                    <br>
                    </form>
