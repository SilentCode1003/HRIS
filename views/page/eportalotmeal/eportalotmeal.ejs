<div class="modal fade" id="overtimemodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header" id="modal-header">
                <h3 class="modal-title fs-5" id="exampleModalLabel">Applied Overtime ?</h3>
                <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
              </div>
              <div class="modal-body" id="modal-body">
                <br>
                <br>
                <div class="row">
                  <div class="col-xl-2 col-lg-4" style="margin-left: 10px;">
                    <div class="col g-6">
                        <div class="p-4" style="width: 300px; margin-top: -100px;">
                        <div class="text-center">
                            <img id="previewleave" src="https://via.placeholder.com/250" class="border border-5 border-form-modal" alt="placeholder">
                        </div>
                        <br>
                        <div class="col">
                            <div class="col g-6">
                            <input type="file" name="edituploadimage" id="edituploadimage"
                                class="form-control border-form-modal" accept="image/*">
                            </div>
                        </div>
                        <h2 class="pb-3 mb-4 text-center modal-content-title">File  Preview</h2>
                        </div>
                    </div>
                  </div>
                  <div class="col-xl-8 col-lg-7" style="margin-left: 150px;">
                    <form>
                      <br>
                      <div class="row g-3">
                        <div class="col">
                            <div class="form-floating">
                              <input type="datetime-local" class="form-control border-form-modal" id="mealclockin" name="mealclockin"
                              placeholder="Address">
                              <label for="floatingInput">Clock In</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                              <input type="datetime-local" class="form-control border-form-modal" id="mealclockout" name="mealclockout"
                              placeholder="Address">
                              <label for="floatingInput">Clock Out</label>
                            </div>
                        </div>
                      </div>
                      <br>
                      <div class="row g-3">
                        <div class="col">
                            <div class="form-floating">
                              <input type="date" class="form-control border-form-modal" id="mealattendancedate" name="mealattendancedate">
                              <label for="floatingInput">Attendance Date</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                              <input type="number" class="form-control border-form-modal" id="mealtotalovertime" name="mealtotalovertime">
                              <label for="floatingInput">Total Overtime</label>
                            </div>
                        </div>
                      </div>
                      <br>
                      <div class="row g-3">
                        <div class="col">
                            <div class="form-floating">
                              <select type="text" class="form-control border-form-modal" id="mealsubgroup" name="mealsubgroup">
                                <option></option>
                              </select>
                              <label for="floatingInput">Sub Group Name</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                              <input type="number" class="form-control border-form-modal" id="mealapprovecount" name="mealapprovecount" readonly>
                              <label for="floatingInput">Total Approve Count</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                                <select class="form-select border-form-modal" id="mealpayrolldate" name="mealpayrolldate"
