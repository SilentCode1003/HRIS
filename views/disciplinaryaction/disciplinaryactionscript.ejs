$(document).on("click", "#editBtn", function () {
  $.ajax({
    type: "POST",
    url: "/offenses/getoffenses",
    data: {
        disciplinaryactionid: disciplinaryactionid,
    },
    success: function (result) {
      if (result.msg === "success") {
        const existingData = result.data;

        $.each(existingData, (key, item) => {
          $("#editshiftid").val(item.disciplinaryactionid); 
          $("#editshift").val(item.actioncode);
          $("#editshiftdepartment").val(item.offenseid);
          $("#editshiftstatus").val(item.description);
          $("#editshiftcreateby").val(item.createby);
          $("#editshiftstatus").val(item.status);
        });
      } else {
        swal("Error fetching employee data", "success");
      }
    },
    error: function (err) {
      swal("An error occurred while fetching employee data", err, "error");
    },
  });
});
