<!-- Table -->
<div class="card" id="tablecard">
    <div class="card-header ch-coop">
      <h3 class="title-card-table">Pending Leave</h3>
      <input id='myInput2' type='text' placeholder="  Search....">
    </div>
    <div class="card-body">
        <div class="table-responsive" id="table-responsive-id">
            <table class="table table-light table-bordered" id="dataTablependingleave">
                <thead>
                    <tr>
                        <th class="col-sm-1">ID</th>
                        <th class="col-25">Name</th>
                        <th>Leave Type</th>
                        <th>Date Started</th>
                        <th>Date Finished</th>
                        <th class="col-26">Reason</th>
                        <th>Applied Date</th>
                        <th class="col-sm-1">Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!--- Action Leave Modal -->
<div class="modal fade" id="allleavemodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
      <div class="modal-content">
          <div class="modal-header" id="modal-header">
              <h3 class="modal-title fs-5" id="exampleModalLabel">Approve This Leave ?</h3>
              <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
            </div>
            <div class="modal-body" id="modal-body">
              <br>
              <br>
              <div class="row">
                <div class="col-xl-2 col-lg-4" style="margin-left: 10px;">
                  <div class="col g-6">
                    <div class="p-4" style="width: 300px; margin-top: -100px;">
                      <div class="text-center">
                        <img id="previewleave" src="https://via.placeholder.com/250" class="border border-5 border-form-modal" alt="placeholder">
                      </div>
                      <br>
                      <h2 class="pb-3 mb-4 text-center modal-content-title">File  Preview</h2>
                    </div>
                  </div>
                </div>
                <div class="col-xl-8 col-lg-7" style="margin-left: 150px;">
                  <form>
                    <br>
                    <div class="row g-3">
                      <div class="col">
                        <div class="form-floating">
                          <select type="text" class="form-control border-form-modal" id="leaveemployeename" name="leaveemployeename"
                            placeholder="First Name" disabled>
                            <option></option>
                          </select>
                          <label for="floatingInput">Full Name</label>
                        </div>
                      </div>
                      <div class="col">
                          <div class="form-floating">
                            <input type="text" class="form-control border-form-modal" id="reqleavetype" name="reqleavetype" disabled>
                            <label for="floatingInput">Leave Type</label>
                          </div>
                      </div>  
                    </div>                             
                    <br>
                    <div class="row g-3">
                      <div class="col">
                          <div class="form-floating">
                            <input type="date" class="form-control border-form-modal" id="leavestartdate" name="leavestartdate" 
                            placeholder="Address">
                            <label for="floatingInput">Leave Start Date</label>
                          </div>
                      </div>
                      <div class="col">
                          <div class="form-floating">
                            <input type="date" class="form-control border-form-modal" id="leaveenddate" name="leaveenddate" 
                            placeholder="Address">
                            <label for="floatingInput">Leave End Date</label>
                          </div>
                      </div>
                      <div class="col">
                          <div class="form-floating">
                            <input type="number" class="form-control border-form-modal" id="leaveduration" name="leaveduration" disabled>
                            <label for="floatingInput">Leave Duration</label>
                          </div>
                        </div>
                      <div class="col">
                        <div class="form-floating">
                          <input type="date" class="form-control border-form-modal" id="leaveapplieddate" name="leaveapplieddate" 
                          placeholder="Address">
                          <label for="floatingInput">Leave Applied Date</label>
                        </div>
                      </div>
                    </div>
                    <br>
                    <div class="row g-3">
                      <div class="col">
                        <div class="form-floating">
                          <input type="number" class="form-control border-form-modal" id="leavedays" name="leavedays" disabled>
                          <label for="floatingInput">Total Leave Days</label>
                        </div>
                      </div>
                      <div class="col">
                        <div class="form-floating">
                          <input type="number" class="form-control border-form-modal" id="unusedleave" name="unusedleave" disabled>
                          <label for="otnormal">Total Unused Leave</label>
                        </div>
                      </div>
                      <div class="col">
                        <div class="form-floating">
                          <input type="number" class="form-control border-form-modal" id="usedleave" name="usedleave" disabled>
                          <label for="otearly">Total Used Leave</label>
                        </div>
                      </div>
                    </div>
                    <br>
                    <div class="row g-3">
                      <div class="col">
                          <div class="form-floating">
                            <input type="number" class="form-control border-form-modal" id="paiddays" name="paiddays" disabled>
                            <label for="otearly">Paid Days</label>
                          </div>
                      </div>
                      <div class="col">
                          <div class="form-floating">
                            <input type="number" class="form-control border-form-modal" id="unpaiddays" name="unpaiddays" disabled>
                            <label for="otearly">Unpaid Days</label>
                          </div>
                      </div>
                      <div class="col">
                          <div class="form-floating">
                              <input type="number" class="form-control border-form-modal" id="leaveyear" name="leaveyear"
                              placeholder="Phone Number" disabled>
                              <label for="floatingInput">Leave Year</label>
                          </div>
                      </div>
                      <div class="col">
                          <div class="form-floating">
                            <select class="form-select border-form-modal" id="reqleavestatus" name="reqleavestatus"
                            aria-label="Floating label select example">
                            <option value="Approved">Approved</option>
                            <option value="Rejected">Rejected</option>
                            <option value="Pending">Pending</option>
                          </select>
                            <label for="floatingInput">Status</label>
                      </div>
                    </div>
                  </div>
                  <br>
                  <div class="row g-3">
                      <div class="col">
                        <div class="form-floating">
                          <textarea type="text" class="form-control border-form-modal" id="leavereason" name="leavereason"
                            placeholder="Reason" disabled></textarea>
                          <label for="floatingInput">Reason</label>
                        </div>
                      </div>
                      <div class="col">
                          <div class="form-floating">
                            <textarea type="text" class="form-control border-form-modal" id="leavecomment" name="leavecomment"
                              placeholder="Comment"></textarea>
                            <label for="floatingInput">Comment</label>
                          </div>
                        </div>
                    </div>
                    <br>
                  </form>
                </div>
              </div>
            </div>
            <div class="modal-footer" id="modal-footer">
              <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-modal-save" id="leavesavebutton">Save</button>
          </div>
      </div>
  </div>
</div>