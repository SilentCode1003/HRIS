<!-- Custom Header Section -->
<header class="bg-dark text-white text-center py-4">
    <div class="container">
        <div class="row">
            <!-- Logo Column (Left Side) -->
            <div class="col-12 col-md-2 text-md-left mb-3 mb-md-0">
                <img src="/images/img/5L.png" alt="Logo" class="img-fluid" style="max-width: 100%; max-height: 100%;">
            </div>

            <!-- Title Column (Centered) -->
            <div class="col-12 col-md-8">
                <h1 class="text-center">5L Solutions Supply & Allied Services Corp</h1>
            </div>
        </div>
    </div>
</header>

<!-- Registration Form Section -->
<div class="container mt-4">
    <div class="row">
        <!-- Combined Image and Form Card -->
        <div class="col-md-12">
            <div class="card shadow">
                <div class="row g-0">
                    <!-- Image Column (Left Side) -->
                    <div class="col-12 col-md-6 position-relative">
                        <!-- Overlay on the Image -->
                        <div class="overlay"></div>

                        <img src="/images/img/hero.jpg" alt="Image" class="img-fluid h-100">

                        <!-- Text Overlaid on the Image -->
                        <div class="position-absolute top-50 start-50 translate-middle text-center text-light w-100">
                            <div class="text-container p-4 bg-dark bg-opacity-75" style="z-index: 2;">
                                <!-- Adjusted z-index -->
                                <h2 class="mb-4 fs-4 text-light">Welcome OJT's</h2>
                                <p class="fs-6 text-light">
                                    "Welcome to the journey of growth and learning! As you embark on your On-the-Job
                                    Training with us, remember that every task, challenge, and experience is an
                                    opportunity for personal and professional development."
                                </p>
                            </div>
                        </div>
                    </div>


                    <!-- Form Column (Right Side) -->
                    <div class="col-md-6">
                        <div class="card-body">
                            <!-- Registration Form -->
                            <form>
                                <div class="mb-3">
                                    <label for="ojtfname" class="form-label">First Name</label>
                                    <input type="text" class="form-control" id="ojtfname" name="ojtfname" required>
                                </div>

                                <div class="mb-3">
                                    <label for="ojtlname" class="form-label">Last Name</label>
                                    <input type="text" class="form-control" id="ojtlname" name="ojtlname" required>
                                </div>

                                <div class="mb-3">
                                    <label for="ojtschool" class="form-label">School</label>
                                    <input type="text" class="form-control" id="ojtschool" name="ojtschool" required>
                                </div>

                                <div class="mb-3">
                                    <label for="ojtgender" class="form-label">Gender</label>
                                    <select class="form-select" id="ojtgender" name="ojtgender" required>
                                        <option selected>Choose...</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="ojtaddress" class="form-label">Address</label>
                                    <input type="text" class="form-control" id="ojtaddress" name="ojtaddress" required>
                                </div>

                                <div class="mb-3">
                                    <label for="ojthours" class="form-label">Total Hours</label>
                                    <input type="number" class="form-control" id="ojthours" name="ojthours" required>
                                </div>

                                <div class="mb-3">
                                    <label for="ojtphone" class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" id="ojtphone" name="ojtphone" required>
                                </div>

                                <div class="mb-3">
                                    <label for="ojtstartdate" class="form-label">Start Date</label>
                                    <input type="date" class="form-control" id="ojtstartdate" name="ojtstartdate" required>
                                </div>

                                <div class="mb-3">
                                    <label for="ojtdepartment" class="form-label">Department</label>
                                    <select class="form-select" id="ojtdepartment" name="ojtdepartment" required>
                                    </select>
                                </div>
                            
                                <div class="mb-3">
                                    <label for="ojtbirthday" class="form-label">Birthday</label>
                                    <input type="date" class="form-control" id="ojtbirthday" name="ojtbirthday" required>
                                </div>

                                <div class="mb-3">
                                    <label for="ojtecname" class="form-label">Emergency Contact Name</label>
                                    <input type="text" class="form-control" id="ojtecname"
                                        name="ojtecname" required>
                                </div>

                                <div class="mb-3">
                                    <label for="ojtecphone" class="form-label">Emergency Contact
                                        Phone</label>
                                    <input type="tel" class="form-control" id="ojtecphone"
                                        name="ojtecphone" required>
                                </div>

                                <div class="text-center">
                                    <img id="preview" src="https://via.placeholder.com/250" style="width: 250px;; height: 250px;;"
                                      class="rounded rounded-circle" alt="placeholder">
                                  </div>
                                  <br>
                                  <div class="col">
                                    <div class="col g-6">
                                      <input type="file" name="ojtprofileimage" id="ojtprofileimage" class="form-control"
                                        accept="image/*">
                                    </div>
                                </div>

                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="termsCheck" required>
                                    <label class="form-check-label" for="termsCheck">I agree to the terms and
                                        conditions</label>
                                </div>

                                <button type="submit" class="btn btn-primary" id="ojtsavebtn">Register</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>