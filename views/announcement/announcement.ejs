<h1 class="font-weight-bold text-danger" id="head-title">Announcement</h1>
<br>
<br>
<!-- Table -->
<div class="card shadow mb-4" id="tablecard">
    <div class="card-header py-3">
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#announcementmodal">
        + Add New
      </button>
        <input id='myInput' onkeyup='searchTable()' type='text' placeholder="  Search....">
    </div>
    <div class="card-body">
        <div class="table-responsive" id="table-responsive-id">
            <table class="table table-striped" id="dataTableannouncement">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tittle</th>
                        <th>Description</th>
                        <th>Created By</th>
                        <th>Created Date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
</div>
<!-- Modal -->
<div class="modal fade" id="announcementmodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Announcement</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form>
                    <div class="col">
                        <div class="form-floating">
                        <input type="text" class="form-control" id="announcementtittle" name="announcementtittle" placeholder="Department Name">
                        <label for="floatingInput">Tittle</label>
                        </div>
                    </div>
                    <br>
                    <div class="col">
                      <div class="form-floating">
                      <input type="text" class="form-control" id="announcementdescription" name="announcementdescription" placeholder="Department Name">
                      <label for="floatingInput">Description</label>
                      </div>
                  </div>
                  <br>
                    <div class="col">
                        <div class="form-floating">
                            <select class="form-select" id="announcementstatus" name="announcementstatus" aria-label="Floating label select example">
                              <option selected>Choose...</option>
                              <option value="Active">Active</option>
                              <option value="Inactive">Inactive</option>
                            </select>
                            <label for="floatingSelectGrid">Announcement</label>
                          </div>
                    </div>
                    <br>
                    <div class="col">
                      <div class="form-floating">
                        <label class="form-label" for="customFile"></label>
                        <input type="file" name="announcementimage" id="announcementimage" class="form-control" accept="image/*">
                        <br>
                        <div class="text-center">
                          <img id="preview" 
                               src="https://via.placeholder.com/250"
                               style="width: 250px;; height: 250px;;"
                               class="rounded" alt="placeholder">
                      </div>
                      </div>
                    </div>
                    <br>
            </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="announcementsavebtn">Save</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Edit Modal -->
