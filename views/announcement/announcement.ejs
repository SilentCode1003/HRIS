<!-- Table -->
<div class="card" id="tablecard">
    <div class="card-header">
      <h3 class="title-card-table">Announcement</h3>
      <button type="button" class="btn btn-add-color" data-bs-toggle="modal" data-bs-target="#announcementmodal">
        <b>+ Add</b>
      </button>
        <input id='myInput'  type='text' placeholder="  Search....">
    </div>
    <div class="card-body">
        <div class="table-responsive" id="table-responsive-id">
            <table class="table table-striped" id="dataTableannouncement">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th class="col-sm-1">ID</th>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Target Date</th>
                        <th class="col-25">Description</th>
                        <th>Created By</th>
                        <th>Created Date</th>
                        <th class="col-sm-1">Status</th>
                        <th class="col-sm-1">Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="announcementmodal" data-bs-backdrop="static" tabindex="-1"
  aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" id="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">ANNOUNCEMENT</h1>
        <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
      </div>
      <div class="modal-body" id="modal-body">
        <form>
          <div class="col">
            <div class="form-floating">
              <input type="text" class="form-control border-form-modal" id="announcementtittle" name="announcementtittle"
                placeholder="Department Name">
              <label for="floatingInput">Title</label>
            </div>
          </div>
          <br>
          <div class="col">
            <div class="form-floating">
              <select class="form-control border-form-modal" id="announcementtype" name="announcementtype">
                <option value="Event">Event</option>
                <option value="Announcement">Announcement</option>
              </select>
              <label for="announcementtype">Announcement Type</label>
            </div>
          </div>
          <br>
          <div class="col">
            <div class="form-floating">
              <textarea class="form-control border-form-modal custom-width-textarea" id="announcementdescription" name="announcementdescription" placeholder="Department Name"></textarea>
              <label for="announcementdescription">Description</label>
            </div>
          </div>                  
          <br>
          <div class="col">
            <div class="form-floating">
              <input type="date" class="form-control border-form-modal" id="targetdate" name="targetdate"
                placeholder="Department Name">
              <label for="floatingInput">Target Date</label>
            </div>
          </div>
          <br>
          <div class="col">
            <div class="form-floating">
              <label class="form-label" for="customFile"></label>
              <input type="file" name="announcementimage" id="announcementimage" class="form-control border-form-modal" accept="image/*">
              <br>
              <div class="text-center">
                <img id="preview" src="https://via.placeholder.com/250" class="rounded preview2" alt="placeholder">
              </div>
            </div>
          </div>
          <br>
        </form>
      </div>
      <div class="modal-footer" id="modal-footer">
        <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-modal-save" id="announcementsavebtn">Save</button>
      </div>
    </div>
  </div>
</div>

