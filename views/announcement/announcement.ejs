                    <input type="text" class="form-control" id="editannouncementdescription" name="editannouncementdescription" placeholder="Department Name">
                    <label for="floatingInput">Description</label>
                    </div>
                </div>
                <br>
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="editannouncementstatus" name="editannouncementstatus" aria-label="Floating label select example">
                          <option selected>Choose...</option>
                          <option value="Active">Active</option>
                          <option value="Inactive">Inactive</option>
                        </select>
                        <label for="floatingSelectGrid">Announcement</label>
                      </div>
                </div>
                <br>
                <div class="col">
