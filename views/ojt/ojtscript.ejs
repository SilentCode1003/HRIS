<script>
  let base64String = "";

  $(document).ready(function () {
    console.log('Initialize');
    LoadTable();
    LoadModal();
    searchTable();

    $(document).on('keyup', '#myInput', function () {
      searchTable();
    });

    function LoadTable() {
      $("#dataTableOjt").DataTable({
        destroy: true,
        processing: true,
        serverSide: true,
        paging: false,
        searching: false,
        info: false,
        scrollY: 400,
        scrollCollapse: true,
        serverMethod: "GET",
        ajax: {
          url: "/ojt/load",
          dataSrc: (json) => {
            var finalData = [];
            var data = json.data;

            console.log(data);
            $.each(data, (key, item) => {
              var action = "";
              var status = item.status;

              action = `
                    <button id="editBtn" class="btn text-primary" name="editBtn" data-bs-toggle="modal" data-bs-target="#editoffensesmodal"><i class="fas fa-fw fa-pen"></i></button>
                   `;

              var imgElement = document.createElement("img");
              imgElement.src = "data:image/jpg;base64," + item.image;
              imgElement.alt = "Profile Image";
              imgElement.style.width = "150px";
              imgElement.style.height = "150px";


              finalData.push({
                image: imgElement.outerHTML,
                id: item.id,
                Name: item.Name,
                DateStarted: item.DateStarted,
                TotalHours: item.TotalHours,
                RemainingHours: item.RemainingHours,
                EndDate: new Date(item.EndDate).toLocaleDateString(),
                Status: item.Status,
                action: action,
              });
            });

            return finalData;
          },
        },
        columnDefs: [
          {
            targets: 1,
            className: "td-indent",
          },
        ],
        columns: [
          { data: "image" },
          { data: "id" },
          { data: "Name" },
          { data: "DateStarted" },
          { data: "TotalHours" },
          { data: "RemainingHours" },
          { data: "EndDate" },
          { data: "Status" },
          { data: "action" },
        ],
        createdRow: function (row, data, dataIndex) {
          $('td', row).each(function (index) {
            this.style.textAlign = "center";
            this.style.verticalAlign = "middle";
          });
        },
        initComplete: function () {
          console.log('Done');
        },
      });
    }


    $(document).on("click", "#ojtsavebtn", function () {
      let image = base64String;
      let firstname = $("#ojtfname").val();
      let lastname = $("#ojtlname").val();
      let address = $("#ojtaddress").val();
      let status = $("#ojtstatus").val();
      let birthday = $("#ojtbirthday").val();
      let gender = $("#ojtgender").val();
      let phone = $("#ojtphone").val();
      let ercontact = $("#ojtecname").val();
      let ercontactnumber = $("#ojtecphone").val();
      let school = $("#ojtschool").val();
      let department = $("#ojtdepartment").val();
      let startdate = $("#ojtstartdate").val();
      let hours = $("#ojthours").val();

      var message = "";

      if (image == "") {
        message += "TITTLE ";
      }

      if (firstname == "") {
        message += "DESCRIPTION ";
      }

      if (lastname == "") {
        message += "TITTLE ";
      }

      if (address == "") {
        message += "DESCRIPTION ";
      }

      if (status == "") {
        message += "TITTLE ";
      }

      if (birthday == "") {
        message += "TITTLE ";
      }

      if (gender == "") {
        message += "TITTLE ";
      }

      if (phone == "") {
        message += "DESCRIPTION ";
      }

      if (ercontact == "") {
        message += "TITTLE ";
      }

      if (ercontactnumber == "") {
        message += "DESCRIPTION ";
      }

      if (school == "") {
        message += "DESCRIPTION ";
      }

      if (department == "") {
        message += "DESCRIPTION ";
      }

      if (startdate == "") {
        message += "DESCRIPTION ";
      }

      if (hours == "") {
        message += "DESCRIPTION ";
      }

      if (message !== "") {
        swal("Validation Error", message, "error");
      } else {
        $.ajax({
          type: "POST",
          url: "/ojt/save",
          data: {
            image: image,
            firstname: firstname,
            lastname: lastname,
            address: address,
            status: status,
            birthday: birthday,
            gender: gender,
            phone: phone,
            ercontact: ercontact,
            ercontactnumber: ercontactnumber,
            school: school,
            department: department,
            startdate: startdate,
            hours: hours,
          },
          success: function (result) {
            if (result.msg == "success") {
              swal({
                title: "Saved Successfully",
                text: "You clicked the button!",
                icon: "success",
                button: "OK!",
              })
                .then(results => {
                  window.location.reload();
                })
              LoadTable();
            }
            else {
              swal({
                title: "Exist",
                text: "Data already exists!",
                icon: "warning",
                button: "OK!",
              });
            }

          },
          error: function (err) {
            swal("Data already exist!", "You clicked the button!", "warning");
          },
        });
      }

    });

    function LoadModal() {
      $.ajax({
        type: "GET",
        url: "/department/load",
        success: function (result) {
          console.log(result.data);
          var data = result.data;

          $.each(data, function (key, item) {
            var options = new Option(item.departmentid, item.departmentid);
            $(options).html(item.departmentname);
            $("#ojtdepartment").append(options);
            console.log(item.departmentname);
          });
        },
        error: function (result) {
          alert("error: " + result.data);
        },
      });
    }

    $("#dataTabloeffenses tbody").on("click", "tr", function () {
      var dataRow = [];
      $(this)
        .closest("tr")
        .find("td")
        .each(function () {
          dataRow.push($(this).text());
        });
      console.log(dataRow);
      offenseid = dataRow[0];
    });

    $(document).on("click", "#editBtn", function () {
      $.ajax({
        type: "POST",
        url: "/offenses/getoffenses",
        data: {
          offenseid: offenseid,
        },
        success: function (result) {
          if (result.msg === "success") {
            const existingData = result.data;

            $.each(existingData, (key, item) => {
              $("#editdepartmentid").val(item.offenseid);
              $("#editoffensesname").val(item.offensename);
              $("#editoffensesstatus").val(item.status);
            });
          } else {
            swal("Error fetching employee data", message, "error");
          }
        },
        error: function (err) {
          swal("An error occurred while fetching employee data", message, "error");
        },
      });
    });

    $(document).on("click", "#offenseseditbtn", function () {
      console.log("Save button clicked");
      let id = offenseid
      let offensename = $("#editoffensesname").val();
      let status = $("#editoffensesstatus").val();

      var message = "";

      if (offenseid === "") {
        message += "departmentname is required. ";
      }

      if (offensename === "") {
        message += "departmenthead is required. ";
      }

      if (status === "") {
        message += "status is required. ";
      }

      if (message !== "") {
        swal("Validation Error", message, "error");
      } else {
        $.ajax({
          type: "POST",
          url: "offenses/update",
          data: {
            offenseid: id,
            offensename: offensename,
            status: status,
          },
          success: function (result) {
            if (result.msg == "success") {
              swal({
                title: "Update Successfully",
                text: "You clicked the button!",
                icon: "success",
                button: "OK!",
              })
                .then(results => {
                  window.location.reload();
                });
              LoadTable();
            } else if (result.msg == "exist") {
              swal({
                title: "Exist",
                text: "Data already exists!",
                icon: "warning",
                button: "OK!",
              });
            } else {
              swal("Data already exists!", "You clicked the button!", "warning");
            }
          },
          error: function (err) {
            swal("Error", "An error occurred while saving data.", "error");
          },
        });
      }
    });

    $(document).on("change", "#ojtprofileimage", function (e) {
      const input = document.getElementById("ojtprofileimage");
      const file = input.files[0];

      console.log("click");

      const reader = new FileReader();
      reader.readAsDataURL(file);
      reader.onloadend = function () {
        const preview = document.getElementById("preview");
        preview.src = reader.result;
      };
      imageUploaded();
    });

    function imageUploaded() {
      const input = document.getElementById("ojtprofileimage");
      const file = input.files[0];

      var reader = new FileReader();
      console.log("next");

      reader.onload = function () {
        base64String = reader.result.replace("data:", "").replace(/^.+,/, "");

        imageBase64Stringsep = base64String;

        console.log(base64String);
      };
      reader.readAsDataURL(file);
    }

  });


  function searchTable() {
    var input, filter, found, table, tr, td, i, j;
    input = document.getElementById("myInput");
    filter = input.value.toUpperCase();
    table = document.getElementById("dataTableOjt");
    tr = table.getElementsByTagName("tr");
    for (i = 0; i < tr.length; i++) {
      td = tr[i].getElementsByTagName("td");
      for (j = 0; j < td.length; j++) {
        if (td[j].innerHTML.toUpperCase().indexOf(filter) > -1) {
          found = true;
        }
      }
      if (found) {
        tr[i].style.display = "";
        found = false;
      } else {
        tr[i].style.display = "none";
      }
    }
  }
</script>