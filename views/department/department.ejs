                    <input type="text" class="form-control" id="employeeemail" name="employeeemail" placeholder="Email">
                    <label for="floatingInput">Email</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                    <input type="date" class="form-control" id="employeehiredate" name="employeehiredate">
                    <label for="floatingInput">Hire Date</label>
                    </div>
                </div>
              </div>
              <br>
