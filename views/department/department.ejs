                          <option value="2">Female</option>
                        </select>
                        <label for="floatingSelectGrid">Gender</label>
                      </div>
                </div>
                <div class="col-md-8">
                    <div class="form-floating">
                    <input type="text" class="form-control" id="employeeaddress" name="employeeaddress" placeholder="Address">
