<h1 class="font-weight-bold text-danger" id="head-title">Holiday Rate</h1>

<br>
<br>
<!-- Table -->
<div class="card shadow mb-4" id="tablecard">
  <div class="card-header py-3">
    <button type="button" class="btn btn-add-color" data-bs-toggle="modal" data-bs-target="#holidayratemodal">
      <b>+ Add</b>
    </button>
    <input id='myInput' type='text' placeholder="  Search....">
  </div>
  <div class="card-body">
    <div class="table-responsive" id="table-responsive-id">
      <table class="table table-striped" id="dataTableholidayrate">
        <thead>
          <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Rate</th>
            <th>Status</th>
            <th>Create by</th>
            <th>Create Date</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
</div>
<!-- Modal -->
<div class="modal fade" id="holidayratemodal" data-bs-backdrop="static" tabindex="-1"
  aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" id="modal-header">
        <i class='bx bx-dollar' style='color:#8cfb45; font-size: 50px; margin: 3px;'></i>
        <h3 class="modal-title" id="exampleModalLabel">Holiday</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="modal-body">
        <form>
          <div class="col">
            <div class="form-floating">
              <select type="date" class="form-control" id="holidayratedate" name="holidayratedate"
                style=" border: 2.5px solid #174634 !important;">
                <option selected>Choose ..........................................</option>
              </select>
              <label for="floatingInput">Date</label>
            </div>
          </div>
          <br>
          <div class="col">
            <div class="form-floating">
              <select type="text" class="form-control" id="holidayraterate" name="holidayraterate" placeholder="Rate"
                style=" border: 2.5px solid #174634 !important;">
                <option selected>Choose ..........................................</option>
                <option>100%</option>
                <option>75%</option>
                <option>50%</option>
              </select>
              <label for="floatingInput">Rate</label>
            </div>
          </div>
          <br>

        </form>
      </div>
      <div class="modal-footer" id="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="background-color: red !important;
          border: 2px solid white !important;">Close</button>
        <button type="button" class="btn btn-primary" id="holidayratesavebtn" style="background-color: green !important;
          border: 2px solid white !important;">Save</button>
      </div>
    </div>
  </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editholidayratemodal" data-bs-backdrop="static" tabindex="-1"
  aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Holiday</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="col">
            <div class="form-floating">
              <select type="text" class="form-control" id="editholidayratedate" name="editholidayratedate">
                <option selected></option>
              </select>
              <label for="floatingInput">Date</label>
            </div>
          </div>
          <br>
          <div class="col">
            <div class="form-floating">
              <input type="text" class="form-control" id="editholidayraterate" name="editholidayraterate"
                placeholder="Rate">
              <label for="floatingInput">Rate</label>
            </div>
          </div>
          <br>
          <div class="col">
            <div class="form-floating">
              <select class="form-select" id="editholidaytratestatus" name="editholidaytratestatus"
                aria-label="Floating label select example">
                <option selected>Status</option>
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
              </select>
              <label for="floatingSelectGrid">Holiday Rate</label>
            </div>
          </div>
          <br>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="editholidayratesavebtn">Save</button>
      </div>
    </div>
  </div>
</div>