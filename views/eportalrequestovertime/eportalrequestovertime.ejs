
<br>
<!-- Table -->
<div class="card shadow mb-4" id="tablecard">
    <div class="card-header ch-requestleave">
        <h3>Request Overtime</h3>
    </div>
    <div class="card-body cbody-requestleave">
        <table class="table table-light table-bordered" id="dataTableapplyOvertime">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Attendance Date</th>
                    <th scope="col">Clock In</th>
                    <th scope="col">Clock Out</th>
                    <th scope="col">Total Hours</th>
                    <th scope="col">Night OT</th>
                    <th scope="col">Normal OT</th>
                    <th scope="col">Early OT</th>
                    <th scope="col">Payroll Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!--action modal-->
<div class="modal fade" id="editmodal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" id="modal-header">
                <h5 class="modal- fs-5" id="exampleModalLabel">Edit Overtime</h5>
                <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
            </div>
            <div class="modal-body" id="modal-body">
                <form>
                    <div class="row g-3">
                        <div class="col">
                            <label for="editattendancedate" class="form-label">Date</label>
                            <input type="date" class="form-control border-form-modal" id="editattendancedate" name="editattendancedate" disabled>
                        </div>
                        <div class="col">
                            <label for="editclockin" class="form-label">Date Time In</label>
                            <input type="datetime-local" class="form-control border-form-modal" id="editclockin" name="editclockin" disabled>
                        </div>
                        <div class="col">
                            <label for="editclockout" class="form-label">Date Time Out</label>
                            <input type="datetime-local" class="form-control border-form-modal" id="editclockout" name="editclockout" disabled>
                        </div>                    
                    </div>
                    <div class="row g-3">
                        <div class="col">
                            <label for="message-text" class="col-form-label">Total Hours</label>
                            <input type="number" class="form-control border-form-modal" id="edittotalhours" name="edittotalhours">
                        </div>
                        <div class="col">
                            <label for="message-text" class="col-form-label">Night Differrentials</label>
                            <input type="number" class="form-control border-form-modal" id="editnightot" name="editnightot">
                        </div>
                        <div class="col">
                            <label for="message-text" class="col-form-label">Normal Overtime</label>
                            <input type="number" class="form-control border-form-modal" id="editnormalot" name="editnormalot">
                        </div>
                        <div class="col">
                            <label for="message-text" class="col-form-label">Early Overtime</label>
                            <input type="number" class="form-control border-form-modal" id="editearlyot" name="editearlyot">
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col">
                            <label for="editreason" class="form-label">Reason :</label>
                            <textarea class="form-control border-form-modal" id="editreason" name="editreason"></textarea>
                        </div>
                    </div>
                    <br>
                    <div class="row g-3">
                        <div class="col">
                            <label for="editpayrolldate" class="form-label">Payroll Date</label>
                            <input type="date" class="form-control border-form-modal" id="editpayrolldate" name="editpayrolldate" disabled>
                        </div>
                        <div class="col">
                            <label for="editstatus" class="form-label">Status</label>
                            <select class="form-control border-form-modal" id="editstatus" name="editstatus">
                                <option>Appllied</option>
                                <option>Approved</option>
                                <option>Cancel</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer" id="modal-footer">
                <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-modal-save" id="applyovertimesavebtn">Save</button>
            </div>
        </div>
    </div>
</div>