<div class="modal fade" id="editmodal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Overtime</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row g-3">
                        <div class="col">
                            <label for="editattendancedate" class="form-label">Date</label>
                            <input type="date" class="form-control" id="editattendancedate" name="editattendancedate" disabled>
                        </div>
                        <div class="col">
                            <label for="editclockin" class="form-label">Date Time In</label>
                            <input type="datetime-local" class="form-control" id="editclockin" name="editclockin" disabled>
                        </div>
                        <div class="col">
                            <label for="editclockout" class="form-label">Date Time Out</label>
                            <input type="datetime-local" class="form-control" id="editclockout" name="editclockout" disabled>
                        </div>                    
                    </div>
                    <div class="row g-3">
                        <div class="col">
                            <label for="message-text" class="col-form-label">Total Hours</label>
                            <input type="number" class="form-control" id="edittotalhours" name="edittotalhours">
                        </div>
                        <div class="col">
                            <label for="message-text" class="col-form-label">Night Differrentials</label>
                            <input type="number" class="form-control" id="editnightot" name="editnightot">
                        </div>
                        <div class="col">
                            <label for="message-text" class="col-form-label">Normal Overtime</label>
                            <input type="number" class="form-control" id="editnormalot" name="editnormalot">
                        </div>
                        <div class="col">
                            <label for="message-text" class="col-form-label">Early Overtime</label>
                            <input type="number" class="form-control" id="editearlyot" name="editearlyot">
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col">
                            <label for="editreason" class="form-label">Reason :</label>
                            <textarea class="form-control" id="editreason" name="editreason"></textarea>
                        </div>
                    </div>
                    <br>
                    <div class="row g-3">
                        <div class="col">
                            <label for="editpayrolldate" class="form-label">Payroll Date</label>
                            <input type="date" class="form-control" id="editpayrolldate" name="editpayrolldate" disabled>
                        </div>
                        <div class="col">
                            <label for="editstatus" class="form-label">Status</label>
                            <select class="form-control" id="editstatus" name="editstatus">
                                <option>Appllied</option>
                                <option>Approved</option>
                                <option>Pending</option>
                                <option>Cancel</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="applyovertimesavebtn">Save</button>
            </div>
        </div>
    </div>
</div>