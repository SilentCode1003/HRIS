 <!-- Modal -->
<div class="modal fade" id="pendingmodal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header" id="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Apply Leave</h1>
        <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
      </div>
      <div class="modal-body" id="modal-body">
        <form>
            <div class="row g-3">
              <div class="col">
                <label for="leavetype" class="form-label">Leave Type</label>
                <select class="form-select border-form-modal" id="leavetype" name="leavetype">
                  <option selected disabled>Select Leave Type First</option> 
                </select>
              </div>
              <div class="col">
                <label for="editemail" class="form-label">Start Leave Date</label>
                <input type="date" class="form-control border-form-modal" id="startldate" name="startldate">
              </div>
              <div class="col">
                <label for="editpassword" class="form-label">End Leave Date</label>
                <input type="date" class="form-control border-form-modal" id="endldate" name="endldate">
              </div>
            </div>
            <div class="row g-3">
                <div class="col">
                  <label for="message-text" class="col-form-label">Reason:</label>
                  <textarea class="form-control border-form-modal" id="leavereason" name="leavereason"></textarea>
                </div>
            </div>
            <div class="row g-3">
                <div class="col">
                  <label for="message-text" class="col-form-label">Total Duration Days</label>
                  <input type="text" class="form-control border-form-modal" id="durationdays" name="durationdays" disabled>
                </div>
                <div class="col">
                  <label for="message-text" class="col-form-label">Total Unused Leave</label>
                  <input type="text" class="form-control border-form-modal" id="unusedleave" name="unpaiddays" disabled>
                </div>
            </div>
            <div class="row g-3">
              <div class="col">
                <label for="message-text" class="col-form-label">Total Paid Days</label>
                <input type="text" class="form-control border-form-modal" id="paiddays" name="paiddays" disabled>
              </div>
              <div class="col">
                <label for="message-text" class="col-form-label">Total Unpaid Days</label>
                <input type="text" class="form-control border-form-modal" id="unpaiddays" name="unpaiddays" disabled>
              </div>
            </div>
            <br>
            <div class="row g-3">
              <div class="form-floating">
                <label class="form-label" for="EditFile"></label>
                <input type="file" name="uploadimage" id="uploadimage" class="form-control border-form-modal"
                  accept="image/*">
                <br>
                <div class="text-center">
                  <img id="preview" src="https://via.placeholder.com/250" style="width: 250px;; height: 250px;"
                    class="rounded border-form-modal" alt="placeholder">
                </div>
              </div>
            </div>
        </form>
      </div>
      <div class="modal-footer" id="modal-footer">
        <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-modal-save" id="pendingleavesavebtn">Save</button>
      </div>
    </div>
  </div>
</div>
