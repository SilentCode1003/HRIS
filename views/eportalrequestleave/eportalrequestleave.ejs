<h1 class="font-weight-bold text-danger" id="head-title">Leave History</h1>
<br>
<br>
<!-- Table -->
<div class="card shadow mb-4" id="tablecard">
  <div class="card-header py-3">
    <button type="button" id="applybtn" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#pendingmodal">
      Apply Leave
    </button>
  </div>
  <div class="card-body">
  <table class="table table-striped" id="dataTableapplyleave">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Date Started</th>
        <th scope="col">Date Finished</th>
        <th scope="col">Leave Type</th>
        <th scope="col">Reason</th>
        <th scope="col">Status</th>
        <th scope="col">Applied Date</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
  </table>
        </div>
      </div>

        <!-- Modal -->
        <div class="modal fade" id="pendingmodal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Apply Leave</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form>
                    <div class="row g-3">
                      <div class="col">
                        <label for="editgender" class="form-label">Leave Type</label>
                        <select class="form-select" id="leavetype" name="leavetype">
                          <option  selected>Choose...</option>
                          <option value="Service Incentive Leave">Service Incentive Leave</option>
                          <option value="Vacation Leave">Vacation Leave</option>
                          <option value="Sick Leave">Sick Leave</option>
                          <option value="Maternity Leave">Maternity Leave</option>
                          <option value="Paternity Leave">Paternity Leave</option>
                          <option value="Solo Parent Leave">Solo Parent Leave</option>
                        </select>
                      </div>
                      <div class="col">
                        <label for="editemail" class="form-label">Start Leave Date</label>
                        <input type="date" class="form-control" id="startldate" name="startldate">
                      </div>
                      <div class="col">
                        <label for="editpassword" class="form-label">End Leave Date</label>
                        <input type="date" class="form-control" id="endldate" name="endldate">
                      </div>
                      </div>
                        <div class="row g-3">
                          <div class="mb-3">
                            <label for="message-text" class="col-form-label">Reason:</label>
                            <textarea class="form-control" id="leavereason" name="leavereason"></textarea>
                          </div>
                          </div>
                </form>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="pendingleavesavebtn">Save</button>
              </div>
            </div>
          </div>
        </div>